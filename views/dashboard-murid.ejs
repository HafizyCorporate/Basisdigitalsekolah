    <canvas id="hidden-canvas" class="hidden" width="240" height="180"></canvas>

    <script>
        const socket = io();
        const namaSiswa = "<%= nama_siswa %>";
        const emailSiswa = "<%= email_siswa %>"; 
        const kodeSekolah = "<%= kode_sekolah %>";
        let kelasTersimpan = "<%= kelas_siswa %>"; 
        let currentRoom = kodeSekolah;
        let myStream = null;
        let currentQuizData = null; 

        // --- 1. LOGIKA VIDEO & STREAMING ---
        
        socket.on('stream-frame', (data) => {
            const img = document.getElementById('teacher-video-stream');
            const placeholder = document.getElementById('video-placeholder');
            
            if(img && data.role === 'Guru') {
                img.src = data.image;
                // Sembunyikan placeholder jika ada gambar
                img.classList.remove('opacity-0');
                placeholder.classList.add('hidden');
                document.getElementById('status-live-indicator').classList.remove('hidden');
            }
        });

        async function startCamera() {
            try {
                myStream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
                const video = document.createElement('video');
                video.id = 'video-element';
                video.srcObject = myStream;
                video.autoplay = true;
                video.muted = true; // Mute diri sendiri agar tidak feedback
                
                // Masukkan video ke dalam kotak PIP (Picture In Picture)
                const container = document.getElementById('cam-container');
                container.innerHTML = '';
                container.appendChild(video);
                
                socket.emit('join-live', { room: currentRoom, nama: namaSiswa });
                sendFrameToGuru();

                document.getElementById('btn-toggle-cam').classList.add('text-pink-400'); // Indikator aktif
                showCuteAlert('Kamera kamu aktif!', 'üìπ');
            } catch (err) { 
                showCuteAlert('Gagal akses kamera!', '‚ùå'); 
                console.error(err);
            }
        }

        function sendFrameToGuru() {
            if(!myStream) return;
            const video = document.getElementById('video-element');
            const canvas = document.getElementById('hidden-canvas');
            const ctx = canvas.getContext('2d');

            if (video && video.readyState === video.HAVE_ENOUGH_DATA) {
                ctx.drawImage(video, 0, 0, canvas.width, canvas.height);
                const frame = canvas.toDataURL('image/jpeg', 0.5);
                socket.emit('stream-frame', { room: currentRoom, image: frame });
            }
            setTimeout(sendFrameToGuru, 200); // 5 FPS cukup untuk thumbnail guru
        }

        // --- 2. FITUR KONTROL BARU (Fullscreen, Mute, Pause) ---

        function toggleFullscreen() {
            const stage = document.getElementById('main-stage');
            const icon = document.getElementById('icon-fullscreen');
            
            stage.classList.toggle('fullscreen-mode');
            
            if(stage.classList.contains('fullscreen-mode')) {
                icon.className = "fa-solid fa-compress";
            } else {
                icon.className = "fa-solid fa-expand";
            }
        }

        function toggleVideoDisplay() {
            const img = document.getElementById('teacher-video-stream');
            const icon = document.getElementById('icon-video-toggle');
            
            if (img.style.display === 'none') {
                img.style.display = 'block';
                icon.className = "fa-solid fa-eye";
                icon.parentElement.title = "Sembunyikan Video";
            } else {
                img.style.display = 'none';
                icon.className = "fa-solid fa-eye-slash";
                icon.parentElement.title = "Tampilkan Video";
            }
        }

        function toggleMute() {
            // CATATAN: Karena sistem ini menggunakan pengiriman gambar (MJPEG via Socket) 
            // dan bukan WebRTC Audio Track penuh, tombol ini hanya UI indikator 
            // kecuali Anda menambahkan elemen <audio> terpisah dari server.
            // Di sini saya buat logic visualnya saja.
            
            const icon = document.getElementById('icon-mute-toggle');
            if(icon.classList.contains('fa-volume-high')) {
                icon.className = "fa-solid fa-volume-xmark";
                showCuteAlert("Suara Guru Dimatikan (Muted)", "üîá");
            } else {
                icon.className = "fa-solid fa-volume-high";
                showCuteAlert("Suara Guru Diaktifkan", "üîä");
            }
        }

        // --- 3. LOGIKA KELAS & ROOM ---

        async function initKelasMurid() {
            try {
                const res = await fetch(`/api/kelas/${kodeSekolah}`);
                const data = await res.json();
                const select = document.getElementById('select-kelas-murid');
                // Reset opsi
                select.innerHTML = '<option value="">-- Pilih Kelas --</option>';
                
                data.forEach(k => {
                    const isSelected = (k.nama_kelas === kelasTersimpan) ? 'selected' : '';
                    select.innerHTML += `<option value="${k.nama_kelas}" ${isSelected}>${k.nama_kelas}</option>`;
                });
                
                if(kelasTersimpan && kelasTersimpan !== "null" && kelasTersimpan !== "") {
                    joinRoomSiswa(kelasTersimpan);
                }
            } catch (e) { console.error("Gagal muat kelas", e); }
        }

        async function muridPindahKelas() {
            const kelasBaru = document.getElementById('select-kelas-murid').value;
            if(!kelasBaru) return;
            
            await fetch('/api/update-kelas-siswa', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ email: emailSiswa, kelas: kelasBaru })
            });
            
            kelasTersimpan = kelasBaru;
            joinRoomSiswa(kelasBaru);
            showCuteAlert(`Masuk ke kelas ${kelasBaru}!`, 'üöÄ');
        }

        function joinRoomSiswa(namaKelas) {
            const newRoom = `${kodeSekolah}-${namaKelas}`;
            socket.emit('join-room', { room: newRoom, nama: namaSiswa, role: 'Siswa' });
            currentRoom = newRoom;
            document.getElementById('room-name-display').innerText = namaKelas;
        }

        window.onload = initKelasMurid;

        // --- 4. LOGIKA CHAT ---

        function showCuteAlert(msg, icon = 'üçì') {
            const alert = document.getElementById('cuteAlert');
            document.getElementById('cuteMsg').innerText = msg;
            document.getElementById('cuteIcon').innerText = icon;
            alert.classList.add('alert-active');
            setTimeout(() => alert.classList.remove('alert-active'), 3000);
        }

        function sendChat() {
            const input = document.getElementById('chat-input');
            if(input.value.trim()) {
                socket.emit('chat-message', { user: namaSiswa, msg: input.value, room: currentRoom, role: 'Siswa' });
                input.value = '';
            }
        }

        socket.on('chat-message', (data) => {
            const chatBox = document.getElementById('chat-box');
            
            const isMe = data.user === namaSiswa;
            const align = isMe ? 'justify-end' : 'justify-start';
            const bg = isMe ? 'bg-pink-500 text-white' : 'bg-slate-100 text-slate-700 border border-slate-200';
            const userLabel = isMe ? '' : `<span class="text-[10px] font-bold text-slate-400 block mb-1">${data.user}</span>`;
            
            chatBox.innerHTML += `
                <div class="flex ${align} mb-2">
                    <div class="max-w-[85%]">
                        ${userLabel}
                        <div class="px-3 py-2 rounded-xl text-xs leading-relaxed ${bg} shadow-sm">
                            ${data.msg}
                        </div>
                    </div>
                </div>`;
            chatBox.scrollTop = chatBox.scrollHeight;
        });

        // --- 5. LOGIKA KUIS (Updated untuk Modal) ---

        function openQuizModal() {
             document.getElementById('quiz-overlay').classList.remove('hidden');
        }

        socket.on('start-quiz', (data) => {
            currentQuizData = data; 
            showCuteAlert('KUIS DIMULAI! Buka lembar jawab sekarang.', 'üìù');
            
            // Tampilkan tombol trigger kuis di dashboard
            document.getElementById('quiz-trigger-area').classList.remove('hidden');
            
            const body = document.getElementById('quiz-body');
            document.getElementById('quiz-content').classList.remove('hidden');
            document.getElementById('quiz-result').classList.add('hidden');
            document.getElementById('quiz-footer').classList.remove('hidden');
            document.getElementById('quiz-title').innerText = "Topik: " + data.judul;

            let html = "";

            if(data.soal_pg && data.soal_pg.length > 0) {
                html += `<div class="mb-6"><h4 class="font-bold text-pink-500 border-b border-pink-100 pb-2 mb-4">A. Pilihan Ganda</h4>`;
                html += data.soal_pg.map((s, idx) => `
                    <div class="pg-item mb-6" data-index="${idx}">
                        <p class="font-semibold text-slate-700 mb-3 text-sm">${idx + 1}. ${s.q}</p>
                        <div class="space-y-2">
                            ${s.a.map(opsi => `
                                <button onclick="selectOption(this, ${idx})" 
                                    class="option-btn w-full text-left p-3 bg-white rounded-xl border border-slate-200 hover:border-pink-300 hover:bg-pink-50 transition-all text-xs font-medium text-slate-600">
                                    ${opsi}
                                </button>`).join('')}
                        </div>
                    </div>`).join('');
                html += `</div>`;
            }

            if(data.soal_quiz && data.soal_quiz.length > 0) {
                html += `<div class="mb-6"><h4 class="font-bold text-amber-500 border-b border-amber-100 pb-2 mb-4">B. Isian Singkat</h4>`;
                html += data.soal_quiz.map((q, idx) => `
                    <div class="quiz-item mb-4">
                        <p class="font-semibold text-slate-700 mb-2 text-sm">${idx + 1}. ${q.q}</p>
                        <input type="text" class="quiz-ans w-full p-3 rounded-xl border border-slate-200 focus:border-amber-400 outline-none text-xs bg-white" placeholder="Jawab singkat...">
                    </div>`).join('');
                html += `</div>`;
            }

            if(data.soal_essay && data.soal_essay.length > 0) {
                html += `<div class="mb-6"><h4 class="font-bold text-purple-500 border-b border-purple-100 pb-2 mb-4">C. Essay Analisis</h4>`;
                html += data.soal_essay.map((e, idx) => `
                    <div class="essay-item mb-4">
                        <p class="font-semibold text-slate-700 mb-2 text-sm">${idx + 1}. ${e.q}</p>
                        <textarea class="essay-ans w-full p-3 rounded-xl border border-slate-200 focus:border-purple-400 outline-none text-xs bg-white h-24" placeholder="Jelaskan jawabanmu..."></textarea>
                    </div>`).join('');
                html += `</div>`;
            }

            body.innerHTML = html;
            
            // Otomatis buka modal biar siswa sadar
            openQuizModal();
        });

        function selectOption(btn, qIdx) {
            const container = btn.closest('.pg-item');
            container.querySelectorAll('.option-btn').forEach(b => b.classList.remove('option-selected'));
            btn.classList.add('option-selected');
        }

        function finishQuiz() {
            // Ambil Data
            const pgAnswers = [];
            document.querySelectorAll('.pg-item').forEach(item => {
                const selected = item.querySelector('.option-selected');
                pgAnswers.push(selected ? selected.innerText.trim() : "");
            });

            const quizAnswers = [];
            document.querySelectorAll('.quiz-ans').forEach(input => quizAnswers.push(input.value.trim()));

            const essayAnswers = [];
            document.querySelectorAll('.essay-ans').forEach(textarea => essayAnswers.push(textarea.value.trim()));

            const studentAnswers = { pg: pgAnswers, quiz: quizAnswers, essay: essayAnswers };

            // UI Changes
            document.getElementById('quiz-content').classList.add('hidden');
            document.getElementById('quiz-result').classList.remove('hidden');
            document.getElementById('quiz-footer').classList.add('hidden');
            document.getElementById('final-score-val').innerText = "...";
            document.getElementById('ai-feedback').innerText = "AI Guru sedang membaca jawabanmu...";

            // Kirim ke Server
            socket.emit('submit-jawaban-siswa', {
                name: namaSiswa,
                email: emailSiswa,
                kelas: kelasTersimpan || 'Umum',
                room: currentRoom,
                materi_judul: currentQuizData ? currentQuizData.judul : "Kuis Live",
                jawabanMurid: studentAnswers
            });
        }

        socket.on('score-updated-live', (data) => {
            if(data.nama_siswa === namaSiswa) {
                document.getElementById('final-score-val').innerText = data.skor;
                document.getElementById('ai-feedback').innerText = data.umpan_balik;
                document.getElementById('sidebar-score').innerText = data.skor;
                document.getElementById('quiz-trigger-area').classList.add('hidden'); // Sembunyikan notif kuis
                showCuteAlert('Nilai kamu sudah keluar!', 'üèÜ');
            }
        });

        function closeQuiz() { 
            document.getElementById('quiz-overlay').classList.add('hidden'); 
        }

        document.getElementById('chat-input').addEventListener('keypress', (e) => { if(e.key === 'Enter') sendChat(); });
    </script>
</body>
