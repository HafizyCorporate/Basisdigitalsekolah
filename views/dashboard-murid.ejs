    </nav>

    <div id="cuteAlert">
        <span id="cuteIcon">üçì</span>
        <span id="cuteMsg">Halo!</span>
    </div>

    <div class="main-layout">

        <div id="main-stage">
            
            <img id="teacher-video-stream" src="" class="opacity-0 transition-opacity duration-500">
            
            <div id="video-placeholder" class="absolute inset-0 flex flex-col items-center justify-center text-slate-500 bg-slate-950 z-0">
                <div class="w-16 h-16 rounded-full bg-slate-900 flex items-center justify-center mb-3 animate-pulse">
                    <i class="fa-solid fa-satellite-dish text-2xl text-slate-700"></i>
                </div>
                <p class="font-bold text-sm text-slate-400">Menunggu Guru...</p>
            </div>

            <div id="student-pip-wrapper">
                <div id="cam-container" class="w-full h-full bg-slate-800 flex items-center justify-center">
                    <span class="text-[9px] text-slate-500 uppercase font-bold tracking-wider">Kamera Mati</span>
                </div>
            </div>

            <div class="video-controls">
                <div class="flex gap-3">
                    <button id="btn-mic" onclick="toggleMic()" class="ctrl-btn bg-slate-800 hover:bg-slate-700 text-slate-300">
                        <i id="icon-mic" class="fa-solid fa-microphone-slash"></i>
                    </button>
                    <button id="btn-cam" onclick="toggleCamera()" class="ctrl-btn bg-slate-800 hover:bg-slate-700 text-slate-300">
                        <i id="icon-cam" class="fa-solid fa-video-slash"></i>
                    </button>
                </div>

                <div class="flex-1 text-center px-2">
                     <span id="my-status-text" class="text-[10px] bg-black/40 px-2 py-1 rounded-full text-slate-300 backdrop-blur-sm border border-white/5">
                        Siap Belajar
                    </span>
                </div>

                <button onclick="toggleFullscreen()" class="ctrl-btn text-white">
                    <i id="icon-fullscreen" class="fa-solid fa-expand"></i>
                </button>
            </div>
        </div>

        <div id="sidebar-col">
            
            <div id="quiz-alert-box" class="hidden bg-gradient-to-r from-pink-600 to-rose-500 rounded-xl p-3 text-white shadow-lg cursor-pointer transform hover:scale-[1.02] transition-transform" onclick="openQuizModal()">
                <div class="flex justify-between items-center">
                    <div class="flex items-center gap-3">
                        <div class="w-8 h-8 bg-white/20 rounded-lg flex items-center justify-center backdrop-blur-sm">
                            <i class="fa-solid fa-bolt text-yellow-300 text-sm"></i>
                        </div>
                        <div>
                            <h4 class="font-bold text-xs uppercase tracking-wide">Kuis Aktif!</h4>
                            <p class="text-[10px] opacity-90">Ketuk untuk mengerjakan</p>
                        </div>
                    </div>
                    <i class="fa-solid fa-chevron-right text-xs opacity-70"></i>
                </div>
            </div>

            <div class="glass-panel flex-1 min-h-0"> <div class="p-3 bg-slate-800/80 border-b border-slate-700 flex justify-between items-center backdrop-blur-sm">
                    <h3 class="font-bold text-slate-300 text-xs flex items-center gap-2">
                        <i class="fa-regular fa-comments text-pink-500"></i> Diskusi Kelas
                    </h3>
                    <div class="text-[10px] text-emerald-400 bg-emerald-500/10 px-2 py-0.5 rounded-full border border-emerald-500/20">
                        ‚óè Online
                    </div>
                </div>
                
                <div id="chat-box" class="flex-1 overflow-y-auto p-3 space-y-3 bg-slate-900/50 text-xs text-slate-300">
                    </div>

                <div class="p-2 bg-slate-800 border-t border-slate-700">
                    <div class="flex gap-2">
                        <input id="chat-input" type="text" placeholder="Ketik pesan..." class="w-full bg-slate-900 border border-slate-600 text-white rounded-lg px-3 py-2 text-xs focus:border-pink-500 focus:ring-1 focus:ring-pink-500 outline-none transition-all">
                        <button onclick="sendChat()" class="bg-pink-600 text-white w-9 rounded-lg hover:bg-pink-500 transition-all flex items-center justify-center shadow-lg shadow-pink-500/20">
                            <i class="fa-solid fa-paper-plane text-xs"></i>
                        </button>
                    </div>
                </div>
            </div>

            <div class="glass-panel p-3 flex flex-row items-center gap-3 bg-slate-800/80 flex-none">
                <div class="w-9 h-9 rounded-lg bg-slate-700 flex items-center justify-center border border-slate-600 text-slate-300 font-bold text-sm">
                    <%= nama_siswa.charAt(0) %>
                </div>
                <div class="flex-1 min-w-0">
                    <h2 class="font-bold text-xs text-slate-200 truncate"><%= nama_siswa %></h2>
                    <div class="flex items-center gap-2 mt-0.5">
                        <p class="text-[10px] text-slate-400">Skor:</p>
                        <span id="sidebar-score" class="text-[10px] font-bold text-pink-400 bg-pink-400/10 px-1.5 rounded border border-pink-400/20">0</span>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div id="quiz-overlay" class="hidden fixed inset-0 bg-slate-900/95 backdrop-blur-sm z-[9999] flex items-center justify-center p-4">
        <div class="bg-white w-full max-w-2xl h-[90vh] rounded-2xl flex flex-col overflow-hidden shadow-2xl">
            <div class="bg-pink-600 p-4 flex justify-between items-center text-white flex-none">
                <div>
                    <h2 class="text-xs opacity-80 uppercase font-semibold">Lembar Jawaban</h2>
                    <h3 id="quiz-title" class="text-sm font-bold truncate max-w-[200px]">Topik Kuis</h3>
                </div>
                <button onclick="closeQuiz()" class="w-8 h-8 flex items-center justify-center rounded-full hover:bg-white/20 transition-colors">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
            
            <div id="quiz-content" class="flex-1 overflow-y-auto p-5 bg-slate-50">
                <div id="quiz-body" class="space-y-6 pb-10"></div>
            </div>
            
            <div id="quiz-result" class="hidden flex-1 flex flex-col items-center justify-center p-6 text-center bg-white">
                <div class="text-6xl mb-4 animate-bounce">üèÜ</div>
                <h3 class="text-xl font-bold text-slate-800">Selesai!</h3>
                <div class="text-4xl font-black text-transparent bg-clip-text bg-gradient-to-r from-pink-600 to-purple-600 my-2" id="final-score-val">0</div>
                <p id="ai-feedback" class="text-xs text-slate-500 max-w-xs bg-slate-100 p-3 rounded-lg leading-relaxed">Menunggu hasil...</p>
                <button onclick="closeQuiz()" class="mt-8 text-pink-600 font-bold text-xs hover:underline">Tutup Halaman</button>
            </div>
            
            <div id="quiz-footer" class="p-4 border-t border-slate-200 bg-white flex-none">
                <button onclick="finishQuiz()" class="w-full bg-pink-600 text-white py-3 rounded-xl font-bold shadow-lg shadow-pink-500/30 hover:bg-pink-500 active:scale-[0.98] transition-all text-sm">
                    Kirim Jawaban <i class="fa-solid fa-rocket ml-2"></i>
                </button>
            </div>
        </div>
    </div>

    <canvas id="hidden-canvas" class="hidden" width="240" height="180"></canvas>

    <script>
        const socket = io();
        // Fallback jika variabel EJS tidak ter-render (untuk testing HTML)
        const namaSiswa = "<%= typeof nama_siswa !== 'undefined' ? nama_siswa : 'Siswa' %>";
        const emailSiswa = "<%= typeof email_siswa !== 'undefined' ? email_siswa : 'email@test.com' %>"; 
        const kodeSekolah = "<%= typeof kode_sekolah !== 'undefined' ? kode_sekolah : 'SCH' %>";
        let kelasTersimpan = "<%= typeof kelas_siswa !== 'undefined' ? kelas_siswa : '' %>"; 
        
        let currentRoom = kodeSekolah;
        let myStream = null;
        let currentQuizData = null; 
        let isCameraOn = false;
        let isMicOn = false;

        // --- 1. LOGIKA UTAMA (KONEKSI) ---
        async function initKelasMurid() {
            try {
                // Mockup data jika fetch gagal (untuk UI testing)
                const select = document.getElementById('select-kelas-murid');
                // Ganti URL ini sesuai endpoint asli kamu
                const res = await fetch(`/api/kelas/${kodeSekolah}`);
                if(res.ok) {
                    const data = await res.json();
                    select.innerHTML = '<option value="">-- Pilih Kelas --</option>';
                    data.forEach(k => {
                        const isSelected = (k.nama_kelas === kelasTersimpan) ? 'selected' : '';
                        select.innerHTML += `<option value="${k.nama_kelas}" ${isSelected}>${k.nama_kelas}</option>`;
                    });
                }
                if(kelasTersimpan && kelasTersimpan !== "null" && kelasTersimpan !== "") {
                    joinRoomSiswa(kelasTersimpan);
                }
            } catch (e) { console.log("Mode UI Only / Fetch Error"); }
        }

        async function muridPindahKelas() {
            const kelasBaru = document.getElementById('select-kelas-murid').value;
            if(!kelasBaru) return;
            try {
                await fetch('/api/update-kelas-siswa', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ email: emailSiswa, kelas: kelasBaru })
                });
            } catch(e) {}
            
            kelasTersimpan = kelasBaru;
            joinRoomSiswa(kelasBaru);
            showCuteAlert(`Masuk ke ${kelasBaru}`, 'üöÄ');
        }

        function joinRoomSiswa(namaKelas) {
            const newRoom = `${kodeSekolah}-${namaKelas}`;
            currentRoom = newRoom;
            socket.emit('join-room', { room: newRoom, nama: namaSiswa, role: 'Siswa' });
            if(isCameraOn) {
                socket.emit('join-live', { room: currentRoom, nama: namaSiswa });
            }
        }

        window.onload = initKelasMurid;

        // --- 2. LOGIKA KAMERA & MIC ---
        async function startCamera() {
            try {
                myStream = await navigator.mediaDevices.getUserMedia({ video: { width: 320, height: 240 }, audio: true });
                const video = document.createElement('video');
                video.id = 'video-element';
                video.srcObject = myStream;
                video.autoplay = true;
                video.muted = true;
                
                // Clear & Append
                const container = document.getElementById('cam-container');
                container.innerHTML = '';
                container.appendChild(video);
                
                isCameraOn = true;
                isMicOn = true; 
                
                // Join Live
                socket.emit('join-live', { room: currentRoom, nama: namaSiswa });
                sendFrameToGuru();
                updateControlUI();
                showCuteAlert('Kamera Aktif', 'üìπ');
            } catch (err) { 
                showCuteAlert('Akses Ditolak', '‚ùå'); 
                console.error(err);
            }
        }

        function toggleMic() {
            if (!myStream) { showCuteAlert('Nyalakan kamera dulu!', '‚ö†Ô∏è'); return; }
            const audioTrack = myStream.getAudioTracks()[0];
            if (audioTrack) {
                audioTrack.enabled = !audioTrack.enabled;
                isMicOn = audioTrack.enabled;
                updateControlUI();
                showCuteAlert(isMicOn ? 'Mic On' : 'Mic Muted', isMicOn ? 'üé§' : 'üîá');
            }
        }

        function toggleCamera() {
            if (!myStream) { startCamera(); return; }
            const videoTrack = myStream.getVideoTracks()[0];
            if (videoTrack) {
                videoTrack.enabled = !videoTrack.enabled;
                isCameraOn = videoTrack.enabled;
                
                const pip = document.getElementById('cam-container');
                if(!isCameraOn) {
                    pip.innerHTML = `<div class="w-full h-full bg-slate-800 flex items-center justify-center"><span class="text-[9px] text-slate-500 font-bold uppercase">Off</span></div>`;
                } else {
                    const video = document.createElement('video');
                    video.id = 'video-element';
                    video.srcObject = myStream;
                    video.autoplay = true;
                    video.muted = true;
                    pip.innerHTML = '';
                    pip.appendChild(video);
                }
                updateControlUI();
                showCuteAlert(isCameraOn ? 'Cam On' : 'Cam Off', isCameraOn ? 'üìπ' : 'üö´');
            }
        }

        function updateControlUI() {
            const btnMic = document.getElementById('btn-mic');
            const iconMic = document.getElementById('icon-mic');
            const btnCam = document.getElementById('btn-cam');
            const iconCam = document.getElementById('icon-cam');
            const statusText = document.getElementById('my-status-text');

            if (isMicOn) {
                btnMic.className = "ctrl-btn bg-emerald-600 text-white hover:bg-emerald-500 border-emerald-500";
                iconMic.className = "fa-solid fa-microphone";
            } else {
                btnMic.className = "ctrl-btn bg-rose-600 text-white hover:bg-rose-500 border-rose-500";
                iconMic.className = "fa-solid fa-microphone-slash";
            }

            if (isCameraOn) {
                btnCam.className = "ctrl-btn bg-emerald-600 text-white hover:bg-emerald-500 border-emerald-500";
                iconCam.className = "fa-solid fa-video";
                statusText.innerText = "On Air";
                statusText.classList.add("text-emerald-400");
            } else {
                btnCam.className = "ctrl-btn bg-rose-600 text-white hover:bg-rose-500 border-rose-500";
                iconCam.className = "fa-solid fa-video-slash";
                statusText.innerText = "Paused";
                statusText.classList.remove("text-emerald-400");
            }
        }

        function sendFrameToGuru() {
            if(!isCameraOn || !myStream) {
                setTimeout(sendFrameToGuru, 1000); 
                return;
            }
            const video = document.getElementById('video-element');
            const canvas = document.getElementById('hidden-canvas');
            const ctx = canvas.getContext('2d');

            if (video && video.readyState === video.HAVE_ENOUGH_DATA) {
                ctx.drawImage(video, 0, 0, canvas.width, canvas.height);
                const frame = canvas.toDataURL('image/jpeg', 0.4); // Kualitas diturunkan sedikit biar ringan
                socket.emit('stream-frame', { room: currentRoom, image: frame });
            }
            setTimeout(sendFrameToGuru, 250); 
        }

        // --- 3. STREAM & CHAT ---
        socket.on('stream-frame', (data) => {
            const img = document.getElementById('teacher-video-stream');
            const placeholder = document.getElementById('video-placeholder');
            
            if(img && data.role === 'Guru') {
                img.src = data.image;
                img.classList.remove('opacity-0');
                placeholder.classList.add('hidden');
                document.getElementById('status-live-indicator').classList.remove('hidden');
            }
        });

        function toggleFullscreen() {
            const stage = document.getElementById('main-stage');
            if (!document.fullscreenElement) {
                stage.requestFullscreen().catch(err => { console.log(err); });
            } else { document.exitFullscreen(); }
        }

        function showCuteAlert(msg, icon = 'üçì') {
            const alert = document.getElementById('cuteAlert');
            document.getElementById('cuteMsg').innerText = msg;
            document.getElementById('cuteIcon').innerText = icon;
            alert.classList.add('alert-active');
            setTimeout(() => alert.classList.remove('alert-active'), 3000);
        }

        function sendChat() {
            const input = document.getElementById('chat-input');
            if(input.value.trim()) {
                socket.emit('chat-message', { user: namaSiswa, msg: input.value, room: currentRoom, role: 'Siswa' });
                input.value = '';
            }
        }

        socket.on('chat-message', (data) => {
            const chatBox = document.getElementById('chat-box');
            const isMe = data.user === namaSiswa;
            
            // Design Bubble Chat Lebih Modern
            const bubbleClass = isMe 
                ? 'bg-pink-600 text-white rounded-tr-none' 
                : 'bg-slate-700 text-slate-200 rounded-tl-none';
            
            const align = isMe ? 'justify-end' : 'justify-start';
            const userLabel = isMe ? '' : `<span class="text-[9px] font-bold text-pink-400 block mb-1 ml-1">${data.user}</span>`;
            
            chatBox.innerHTML += `
                <div class="flex ${align} mb-2 animate-fade-in-up">
                    <div class="max-w-[80%]">
                        ${userLabel}
                        <div class="px-3 py-2 rounded-2xl text-xs leading-relaxed shadow-sm ${bubbleClass}">
                            ${data.msg}
                        </div>
                    </div>
                </div>`;
            chatBox.scrollTop = chatBox.scrollHeight;
        });

        // --- 4. KUIS LOGIC ---
        function openQuizModal() {
             document.getElementById('quiz-overlay').classList.remove('hidden');
             document.getElementById('quiz-alert-box').classList.add('hidden');
        }

        function closeQuiz() { document.getElementById('quiz-overlay').classList.add('hidden'); }

        socket.on('start-quiz', (data) => {
            currentQuizData = data; 
            showCuteAlert('Kuis Dimulai!', 'üìù');
            document.getElementById('quiz-alert-box').classList.remove('hidden');
            
            const body = document.getElementById('quiz-body');
            document.getElementById('quiz-content').classList.remove('hidden');
            document.getElementById('quiz-result').classList.add('hidden');
            document.getElementById('quiz-footer').classList.remove('hidden');
            document.getElementById('quiz-title').innerText = data.judul;

            let html = "";
            if(data.soal_pg && data.soal_pg.length > 0) {
                html += `<div class="mb-4"><h4 class="text-xs font-bold text-pink-600 uppercase mb-3">Pilihan Ganda</h4>`;
                html += data.soal_pg.map((s, idx) => `
                    <div class="pg-item mb-6 bg-white p-3 rounded-xl border border-slate-100 shadow-sm" data-index="${idx}">
                        <p class="font-semibold text-slate-700 mb-3 text-sm"><span class="text-pink-500 mr-1">${idx + 1}.</span> ${s.q}</p>
                        <div class="space-y-2">
                            ${s.a.map(opsi => `<button onclick="selectOption(this)" class="option-btn w-full text-left p-3 bg-slate-50 rounded-lg border border-slate-200 hover:bg-pink-50 hover:border-pink-200 transition-all text-xs font-medium text-slate-600">${opsi}</button>`).join('')}
                        </div>
                    </div>`).join('');
                html += `</div>`;
            }
            // Essay logic same...
            body.innerHTML = html;
        });

        function selectOption(btn) {
            btn.closest('.pg-item').querySelectorAll('.option-btn').forEach(b => {
                b.classList.remove('bg-pink-500', 'text-white', 'border-pink-500', 'option-selected');
                b.classList.add('bg-slate-50', 'text-slate-600');
            });
            btn.classList.remove('bg-slate-50', 'text-slate-600');
            btn.classList.add('bg-pink-500', 'text-white', 'border-pink-500', 'option-selected');
        }

        function finishQuiz() {
            // ... Logic submit sama seperti sebelumnya ...
            const pgAnswers = [];
            document.querySelectorAll('.pg-item').forEach(item => {
                const selected = item.querySelector('.option-selected');
                pgAnswers.push(selected ? selected.innerText.trim() : "");
            });

            document.getElementById('quiz-content').classList.add('hidden');
            document.getElementById('quiz-result').classList.remove('hidden');
            document.getElementById('quiz-footer').classList.add('hidden');
            document.getElementById('final-score-val').innerText = "...";
            
            socket.emit('submit-jawaban-siswa', {
                name: namaSiswa, email: emailSiswa, kelas: kelasTersimpan || 'Umum', room: currentRoom,
                materi_judul: currentQuizData ? currentQuizData.judul : "Kuis Live",
                jawabanMurid: { pg: pgAnswers, essay: [] }
            });
        }
        
        socket.on('score-updated-live', (data) => {
            if(data.nama_siswa === namaSiswa) {
                document.getElementById('final-score-val').innerText = data.skor;
                document.getElementById('ai-feedback').innerText = data.umpan_balik || "Kerja bagus!";
                document.getElementById('sidebar-score').innerText = data.skor;
            }
        });

        document.getElementById('chat-input').addEventListener('keypress', (e) => { if(e.key === 'Enter') sendChat(); });

    </script>
</body>
