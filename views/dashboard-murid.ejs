<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Space - Fun Edition</title>
    <script src="https://cdn.tailwindcss.com?plugins=typography"></script>
    <script src="/socket.io/socket.io.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Quicksand', sans-serif; background: #fff5f7; color: #475569; }
        .bubble-card { background: white; border-radius: 3rem; border: 6px solid #ffecf0; box-shadow: 0 20px 0 #ffecf0; transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275); }
        .bubble-card:hover { transform: translateY(-5px); }
        
        @keyframes bounceIn {
            0% { transform: scale(0.3); opacity: 0; }
            50% { transform: scale(1.05); opacity: 1; }
            70% { transform: scale(0.9); }
            100% { transform: scale(1); }
        }
        .animate-fun { animation: bounceIn 0.6s ease forwards; }

        #cuteAlert {
            position: fixed; top: -150px; left: 50%; transform: translateX(-50%);
            background: #ff6b95; color: white; padding: 1rem 2rem;
            border-radius: 5rem; font-weight: 800; border: 4px solid white;
            box-shadow: 0 10px 0 #e04a76; z-index: 5000; transition: all 0.5s;
            width: 80%; text-align: center; justify-content: center;
        }
        .alert-active { top: 30px !important; }
        
        /* Mirroring for camera */
        #video-element, #teacher-video-stream { transform: scaleX(-1); object-fit: cover; }
        #quiz-overlay { z-index: 4000; }

        /* LIVE CLASSROOM STYLES */
        .live-frame-container { background: #1e1b4b; border-radius: 2.5rem; border: 8px solid #e0e7ff; overflow: hidden; box-shadow: 0 15px 0 #e0e7ff; }

        @media (max-width: 768px) {
            .bubble-card { border-radius: 2rem; border-width: 4px; box-shadow: 0 10px 0 #ffecf0; }
            main { margin-top: 1rem; }
            #no-materi { height: 400px; padding: 2rem; }
            .prose { font-size: 0.9rem; }
        }

        @media (min-width: 769px) {
            .desktop-container { display: flex !important; flex-direction: row !important; align-items: flex-start; }
            aside { width: 320px !important; position: sticky; top: 2.5rem; }
            main { flex: 1 !important; }
        }

        /* AI Scorer Badge */
        .score-pop { font-size: 3rem; font-weight: 900; color: #ff6b95; text-shadow: 4px 4px 0px #ffecf0; }
    </style>
</head>
<body class="p-4 md:p-10">

    <div id="quiz-overlay" class="hidden fixed inset-0 bg-pink-500/20 backdrop-blur-md flex items-center justify-center p-4">
        <div class="bubble-card max-w-2xl w-full p-6 md:p-10 bg-white animate-fun relative max-h-[90vh] overflow-y-auto">
            <button onclick="closeQuiz()" class="absolute top-4 right-4 md:top-6 md:right-8 text-gray-400 hover:text-pink-500 font-bold text-xs">TUTUP [X]</button>
            <div id="quiz-content">
                <h2 id="quiz-title" class="text-xl md:text-2xl font-black text-pink-500 mb-6 uppercase">üéØ Kuis Kilat!</h2>
                <div id="quiz-body" class="space-y-6"></div>
                <div id="quiz-footer" class="hidden mt-8 pt-6 border-t-4 border-pink-50 text-center">
                    <button onclick="finishQuiz()" class="bg-pink-500 text-white px-10 py-4 rounded-3xl font-black shadow-[0_10px_0_#e04a76] hover:translate-y-1 hover:shadow-[0_5px_0_#e04a76] transition-all uppercase">Kirim Jawaban & Lihat Nilai AI üöÄ</button>
                </div>
            </div>
            <div id="quiz-result" class="hidden text-center py-10">
                <div class="score-pop mb-2" id="final-score-val">0</div>
                <h3 class="text-2xl font-black text-slate-700 uppercase mb-4">Nilai Kamu!</h3>
                <div class="p-6 bg-pink-50 rounded-[2rem] border-4 border-pink-100 mb-6">
                    <p class="text-[10px] font-black text-pink-400 uppercase mb-2">Evaluasi AI Untukmu:</p>
                    <p id="ai-feedback" class="text-sm font-bold text-slate-600 italic">"Analisis sedang diproses..."</p>
                </div>
                <button onclick="closeQuiz()" class="text-pink-500 font-black uppercase text-sm underline">Kembali ke Kelas</button>
            </div>
        </div>
    </div>

    <div id="cuteAlert" class="flex items-center gap-4">
        <span id="cuteIcon" class="text-2xl md:text-3xl">üçì</span>
        <span id="cuteMsg" class="text-xs md:text-base">Halo! Semangat Belajar ya!</span>
    </div>

    <div class="max-w-6xl mx-auto flex flex-col desktop-container gap-8">
        
        <aside class="w-full space-y-6 order-2 md:order-1">
            <div id="score-card" class="bubble-card p-6 bg-gradient-to-br from-pink-500 to-rose-400 border-none shadow-[0_15px_0_#e04a76] text-white hidden">
                <div class="flex justify-between items-center mb-2">
                    <p class="text-[9px] font-black uppercase tracking-widest opacity-80">Rangkuman Nilai</p>
                    <span class="text-xl">üèÜ</span>
                </div>
                <div class="flex items-baseline gap-2">
                    <h2 id="sidebar-score" class="text-4xl font-black">0</h2>
                    <span class="text-xs font-bold opacity-80">Poin AI</span>
                </div>
            </div>

            <div class="bubble-card p-6 bg-white border-pink-100">
                <p class="text-[9px] font-black text-pink-400 uppercase tracking-widest mb-2 text-center">üè´ Ruang Kelas Kamu</p>
                <select id="select-kelas-murid" onchange="muridPindahKelas()" class="w-full p-3 rounded-2xl border-2 border-pink-50 bg-pink-50/50 text-xs font-bold text-pink-600 outline-none">
                    <option value="">-- Pilih Kelas --</option>
                </select>
            </div>

            <div class="bubble-card p-8 text-center bg-white relative">
                <div id="cam-container" class="w-20 h-20 md:w-24 md:h-24 bg-pink-100 rounded-full mx-auto mb-4 flex items-center justify-center text-4xl md:text-5xl border-4 border-pink-200 overflow-hidden">
                    <span id="placeholder-avatar">üê∂</span>
                </div>
                <h2 class="text-xl md:text-2xl font-black text-pink-500 uppercase"><%= nama_siswa %></h2>
                <p class="text-[10px] font-bold text-slate-400 mb-2 uppercase tracking-widest">SISWA AKTIF</p>
                
                <button id="btn-cam" onclick="startCamera()" class="mt-2 text-[10px] font-bold text-pink-400 border border-pink-200 px-3 py-1 rounded-full hover:bg-pink-50 transition-all uppercase">üì∏ Aktifkan Kamera</button>
            </div>
            
            <div class="bubble-card p-4 md:p-6 bg-indigo-50 border-indigo-100 shadow-[0_10px_0_#e0e7ff] md:shadow-[0_20px_0_#e0e7ff] text-center">
                <p class="text-[9px] font-black text-indigo-400 uppercase tracking-widest mb-1">Guru Kamu</p>
                <h4 id="nama-guru-display" class="font-bold text-indigo-700 uppercase text-xs md:text-base">Menunggu Guru...</h4>
            </div>

            <div class="bubble-card p-6 bg-yellow-50 border-yellow-200 shadow-[0_10px_0_#fef3c7] md:shadow-[0_20px_0_#fef3c7]">
                <h3 class="font-black text-yellow-700 text-sm mb-4 uppercase flex items-center gap-2"><span>üí¨</span> Diskusi Kelas</h3>
                <div id="chat-box" class="h-48 md:h-64 overflow-y-auto space-y-3 p-2 mb-4 text-xs md:text-sm font-semibold"></div>
                <div class="flex gap-2">
                    <input id="chat-input" type="text" placeholder="Ketik..." class="w-full p-3 rounded-2xl border-2 border-yellow-100 text-xs outline-none">
                    <button onclick="sendChat()" class="bg-yellow-400 text-white p-3 rounded-2xl hover:scale-110 active:scale-90 transition-all">üöÄ</button>
                </div>
            </div>
        </aside>

        <main class="w-full order-1 md:order-2 space-y-8">
            <div id="live-stage-murid" class="live-frame-container hidden animate-fun">
                <div class="relative w-full h-[200px] md:h-[400px]">
                    <img id="teacher-video-stream" class="w-full h-full object-cover bg-slate-900" />
                    
                    <div id="teacher-presentation-overlay" class="hidden absolute inset-0 bg-white p-6 md:p-10 overflow-y-auto prose prose-pink max-w-none">
                        <h2 id="live-judul" class="text-pink-500 font-black"></h2>
                        <div id="live-konten" class="text-sm"></div>
                    </div>

                    <div class="absolute top-4 left-4 flex items-center gap-2">
                        <div class="bg-red-500 text-white text-[8px] font-bold px-2 py-1 rounded-full animate-pulse">GURU LIVE</div>
                        <div id="status-mode" class="bg-black/50 text-white text-[8px] px-2 py-1 rounded-full">Mode: Kamera</div>
                    </div>
                </div>
            </div>

            <div id="no-materi" class="bubble-card flex flex-col items-center justify-center p-8 md:p-12 text-center bg-white min-h-[300px] md:h-[600px]">
                <div class="relative mb-6 md:mb-8">
                    <div class="w-24 h-24 md:w-32 md:h-32 bg-sky-50 rounded-full animate-ping absolute opacity-20"></div>
                    <span class="text-5xl md:text-7xl relative">‚òÅÔ∏è</span>
                </div>
                <h2 class="text-xl md:text-3xl font-black text-sky-400 uppercase">Tunggu Sebentar...</h2>
                <p id="status-materi-text" class="text-slate-400 mt-2 font-semibold text-xs md:text-base">Pilih kelasmu dulu untuk melihat materi!</p>
            </div>

            <div id="materi-display" class="hidden animate-fun">
                <div class="bubble-card p-8 md:p-16 bg-white border-sky-100 shadow-[0_10px_0_#e0f2fe] md:shadow-[0_20px_0_#e0f2fe] prose prose-pink max-w-none">
                    <div id="content-materi"></div>
                </div>
            </div>
        </main>

    </div>

    <script>
        const socket = io();
        const namaSiswa = "<%= nama_siswa %>";
        const emailSiswa = "<%= email_siswa %>"; 
        const kodeSekolah = "<%= kode_sekolah %>";
        let kelasTersimpan = "<%= kelas_siswa %>"; 
        let currentRoom = kodeSekolah;
        let myStream = null;

        let correctAnswers = 0;
        let totalQuizQuestions = 0;

        // --- PENAMBAHAN LOGIKA PENERIMA STREAMING (TANPA MERUBAH ASLINYA) ---
        
        socket.on('update-frame', (data) => {
            // Hanya update jika murid berada di room yang sama
            if(data.room === currentRoom) {
                const img = document.getElementById('teacher-video-stream');
                if(img) img.src = data.image;
            }
        });

        // --- LANJUTAN LOGIKA ASLI ---

        async function startCamera() {
            try {
                myStream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
                const video = document.createElement('video');
                video.id = 'video-element';
                video.srcObject = myStream;
                video.autoplay = true;
                video.className = "w-full h-full object-cover rounded-full";
                const container = document.getElementById('cam-container');
                container.innerHTML = '';
                container.appendChild(video);
                
                socket.emit('join-live', { room: currentRoom, name: namaSiswa });
                
                document.getElementById('btn-cam').classList.add('hidden');
                showCuteAlert('Kamu sudah masuk Live Classroom!', 'üìπ');
            } catch (err) { 
                showCuteAlert('Ups! Izin kamera ditolak.', '‚ùå'); 
            }
        }

        socket.on('change-view-mode', (data) => {
            const overlay = document.getElementById('teacher-presentation-overlay');
            const statusMode = document.getElementById('status-mode');
            
            if (data.mode === 'presentation') {
                overlay.classList.remove('hidden');
                statusMode.innerText = "Mode: Materi AI";
                showCuteAlert('Guru sedang menampilkan materi!', 'üìë');
            } else {
                overlay.classList.add('hidden');
                statusMode.innerText = "Mode: Kamera";
                showCuteAlert('Kembali ke video Guru', 'üë®‚Äçüè´');
            }
        });

        socket.on('force-mute', () => {
            if (myStream) {
                myStream.getAudioTracks().forEach(track => track.enabled = false);
                showCuteAlert('Suara kamu dimatikan Guru', 'üîá');
            }
        });

        async function initKelasMurid() {
            try {
                const res = await fetch(`/api/kelas/${kodeSekolah}`);
                const data = await res.json();
                const select = document.getElementById('select-kelas-murid');
                data.forEach(k => {
                    const isSelected = (k.nama_kelas === kelasTersimpan) ? 'selected' : '';
                    select.innerHTML += `<option value="${k.nama_kelas}" ${isSelected}>${k.nama_kelas}</option>`;
                });
                if(kelasTersimpan && kelasTersimpan !== "null") { joinRoomSiswa(kelasTersimpan); }
            } catch (e) { console.error("Gagal memuat daftar kelas"); }
        }

        async function muridPindahKelas() {
            const kelasBaru = document.getElementById('select-kelas-murid').value;
            if(!kelasBaru) return;
            await fetch('/api/update-kelas-siswa', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ email: emailSiswa, kelas: kelasBaru })
            });
            joinRoomSiswa(kelasBaru);
            showCuteAlert(`Kamu masuk ke kelas ${kelasBaru}!`, 'üåà');
        }

        function joinRoomSiswa(namaKelas) {
            const newRoom = `${kodeSekolah}-${namaKelas}`;
            socket.emit('join-room', { room: newRoom, nama: namaSiswa, role: 'Siswa' });
            currentRoom = newRoom;
            document.getElementById('status-materi-text').innerText = `Menunggu materi dari Guru di ${namaKelas}...`;
            document.getElementById('chat-box').innerHTML = ''; 
            document.getElementById('live-stage-murid').classList.remove('hidden');
        }

        window.onload = () => { initKelasMurid(); };

        function showCuteAlert(msg, icon = 'üçì') {
            const alert = document.getElementById('cuteAlert');
            document.getElementById('cuteMsg').innerText = msg;
            document.getElementById('cuteIcon').innerText = icon;
            alert.classList.add('alert-active');
            setTimeout(() => alert.classList.remove('alert-active'), 3000);
        }

        function sendChat() {
            const input = document.getElementById('chat-input');
            if(input.value.trim()) {
                socket.emit('chat-message', { user: namaSiswa, msg: input.value, room: currentRoom, role: 'Siswa' });
                input.value = '';
            }
        }

        socket.on('chat-message', (data) => {
            const chatBox = document.getElementById('chat-box');
            if(data.role === 'Guru') { 
                document.getElementById('nama-guru-display').innerText = data.user; 
            }
            const side = data.user === namaSiswa ? 'text-right' : 'text-left';
            const color = data.user === namaSiswa ? 'bg-pink-100' : 'bg-white';
            const labelColor = data.role === 'Guru' ? 'text-indigo-500 font-black' : 'text-gray-400';
            chatBox.innerHTML += `<div class="animate-fun ${side}"><span class="text-[9px] ${labelColor} uppercase">${data.user}</span><div class="p-3 rounded-2xl ${color} border border-gray-100 shadow-sm inline-block max-w-[80%]">${data.msg}</div></div>`;
            chatBox.scrollTop = chatBox.scrollHeight;
        });

        socket.on('new-materi', (data) => {
            showCuteAlert('Materi baru sudah siap!', 'üéÅ');
            document.getElementById('no-materi').classList.add('hidden');
            document.getElementById('materi-display').classList.remove('hidden');
            document.getElementById('content-materi').innerHTML = `<h1 class="text-2xl md:text-4xl font-black text-pink-500 mb-8">${data.judul}</h1><div class="text-slate-600 leading-relaxed">${data.html}</div>`;
            document.getElementById('live-judul').innerText = data.judul;
            document.getElementById('live-konten').innerHTML = data.html;
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        socket.on('start-quiz', (data) => {
            showCuteAlert('GURU MEMULAI KUIS! AYO JAWAB!', 'üéØ');
            correctAnswers = 0;
            totalQuizQuestions = data.soal.length;
            
            const overlay = document.getElementById('quiz-overlay');
            const body = document.getElementById('quiz-body');
            const content = document.getElementById('quiz-content');
            const result = document.getElementById('quiz-result');
            const footer = document.getElementById('quiz-footer');

            overlay.classList.remove('hidden');
            content.classList.remove('hidden');
            result.classList.add('hidden');
            footer.classList.remove('hidden');

            document.getElementById('quiz-title').innerText = "KUIS: " + data.judul;
            body.innerHTML = data.soal.map((s, idx) => `
                <div class="p-5 bg-sky-50 rounded-[2rem] border-4 border-sky-100 mb-4">
                    <p class="font-bold text-slate-700 mb-4 text-sm md:text-lg">${idx + 1}. ${s.q}</p>
                    <div class="grid grid-cols-1 gap-3">
                        ${s.a.map(opsi => `<button onclick="checkAnswer(this, '${opsi}', '${s.c}')" class="option-btn p-3 md:p-4 bg-white rounded-2xl border-4 border-white hover:border-pink-200 transition-all text-xs md:text-sm font-bold text-slate-600 shadow-sm">${opsi}</button>`).join('')}
                    </div>
                </div>
            `).join('');
        });

        function checkAnswer(btn, picked, correct) {
            const parent = btn.parentElement;
            const buttons = parent.querySelectorAll('button');
            buttons.forEach(b => b.disabled = true);
            
            if(picked === correct) {
                btn.classList.add('bg-green-500', 'text-white', 'border-green-200');
                showCuteAlert('HEBAT! Jawaban Benar!', 'üåü');
                correctAnswers++;
            } else {
                btn.classList.add('bg-red-500', 'text-white', 'border-red-200');
                showCuteAlert('Oops! Kurang tepat!', 'üß∏');
                buttons.forEach(b => {
                    if(b.innerText === correct) b.classList.add('border-green-500', 'text-green-600');
                });
            }
        }

        function finishQuiz() {
            const finalScore = totalQuizQuestions > 0 ? Math.round((correctAnswers / totalQuizQuestions) * 100) : 0;
            let feedback = "";
            if(finalScore === 100) feedback = "Luar biasa! Kamu memahami seluruh materi dengan sempurna. Pertahankan prestasimu!";
            else if(finalScore >= 75) feedback = "Bagus sekali! Kamu sudah menguasai sebagian besar materi. Sedikit lagi menuju sempurna!";
            else if(finalScore >= 50) feedback = "Cukup baik, tapi ada beberapa bagian yang perlu kamu pelajari lagi. Jangan menyerah!";
            else feedback = "Jangan berkecil hati. Mari kita ulas lagi materinya bersama-sama. Kamu pasti bisa!";

            document.getElementById('quiz-content').classList.add('hidden');
            document.getElementById('quiz-result').classList.remove('hidden');
            document.getElementById('quiz-footer').classList.add('hidden');
            document.getElementById('final-score-val').innerText = finalScore;
            document.getElementById('ai-feedback').innerText = `"${feedback}"`;
            
            document.getElementById('score-card').classList.remove('hidden');
            document.getElementById('sidebar-score').innerText = finalScore;

            socket.emit('update-score-guru', {
                name: namaSiswa,
                score: finalScore,
                feedback: feedback,
                kelas: kelasTersimpan || 'Umum',
                room: currentRoom,
                time: new Date().toLocaleTimeString()
            });

            showCuteAlert('Nilai kamu sudah terkirim ke Guru!', '‚úÖ');
        }

        function closeQuiz() { document.getElementById('quiz-overlay').classList.add('hidden'); }
        document.getElementById('chat-input').addEventListener('keypress', (e) => { if(e.key === 'Enter') sendChat(); });
    </script>
</body>
</html>
