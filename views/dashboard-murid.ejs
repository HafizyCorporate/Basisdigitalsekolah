    <style>
        body { font-family: 'Quicksand', sans-serif; background: #f0f4f8; color: #334155; }
        
        /* Kartu & Dekorasi */
        .glass-panel { background: white; border-radius: 1.5rem; border: 1px solid #e2e8f0; box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1); }
        .glass-panel:hover { box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1); }
        
        /* Animasi */
        @keyframes pulse-ring {
            0% { transform: scale(0.33); }
            80%, 100% { opacity: 0; }
        }
        .ring-pulse { position: relative; }
        .ring-pulse::before {
            content: ''; position: absolute; left: -10px; top: -10px; height: calc(100% + 20px); width: calc(100% + 20px);
            border: 3px solid #f43f5e; border-radius: 50%; animation: pulse-ring 1.25s cubic-bezier(0.215, 0.61, 0.355, 1) infinite;
        }

        /* Notifikasi */
        #cuteAlert {
            position: fixed; top: -100px; left: 50%; transform: translateX(-50%);
            background: #fff; color: #be185d; padding: 0.75rem 2rem;
            border-radius: 50px; font-weight: 700; border: 2px solid #fce7f3;
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1); z-index: 5000; transition: top 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            display: flex; align-items: center; gap: 10px;
        }
        .alert-active { top: 30px !important; }

        /* Video Player Styles */
        #main-stage { position: relative; overflow: hidden; background: #000; border-radius: 1.5rem; aspect-ratio: 16/9; transition: all 0.3s ease; }
        #teacher-video-stream { width: 100%; height: 100%; object-fit: cover; }
        
        /* Student PIP Camera */
        #student-pip-wrapper {
            position: absolute; bottom: 1rem; right: 1rem; width: 160px; aspect-ratio: 4/3;
            border-radius: 1rem; overflow: hidden; border: 3px solid rgba(255, 255, 255, 0.8);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.5); z-index: 20; transition: all 0.3s ease;
            background: #1e293b;
        }
        #student-pip-wrapper:hover { transform: scale(1.05); }
        #video-element { width: 100%; height: 100%; object-fit: cover; transform: scaleX(-1); }

        /* Controls */
        .video-controls {
            position: absolute; bottom: 1rem; left: 1rem; right: 1rem; 
            padding: 0.5rem 1rem; background: rgba(0, 0, 0, 0.6); backdrop-filter: blur(8px);
            border-radius: 1rem; display: flex; align-items: center; gap: 1rem;
            opacity: 0; transition: opacity 0.3s; pointer-events: none; z-index: 30;
        }
        #main-stage:hover .video-controls { opacity: 1; pointer-events: auto; }
        
        /* Fullscreen Mode */
        .fullscreen-mode {
            position: fixed !important; top: 0; left: 0; right: 0; bottom: 0;
            width: 100vw !important; height: 100vh !important;
            border-radius: 0 !important; z-index: 9999;
        }
        .fullscreen-mode #student-pip-wrapper { width: 240px; bottom: 2rem; right: 2rem; }
        .fullscreen-mode .video-controls { bottom: 2rem; left: 2rem; right: 2rem; }

        /* Quiz Modal */
        #quiz-overlay { z-index: 4000; }
        .option-selected { background: #ec4899 !important; color: white !important; border-color: #ec4899 !important; }

        /* Scrollbar Halus */
        ::-webkit-scrollbar { width: 6px; }
        ::-webkit-scrollbar-track { background: transparent; }
        ::-webkit-scrollbar-thumb { background: #cbd5e1; border-radius: 10px; }
        ::-webkit-scrollbar-thumb:hover { background: #94a3b8; }
    </style>
</head>
