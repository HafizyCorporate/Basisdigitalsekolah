<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Space - Fun Edition</title>
    <script src="https://cdn.tailwindcss.com?plugins=typography"></script>
    <script src="/socket.io/socket.io.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Quicksand', sans-serif; background: #fff5f7; color: #475569; }
        .bubble-card { background: white; border-radius: 3rem; border: 6px solid #ffecf0; box-shadow: 0 20px 0 #ffecf0; transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275); }
        .bubble-card:hover { transform: translateY(-5px); }
        
        @keyframes bounceIn {
            0% { transform: scale(0.3); opacity: 0; }
            50% { transform: scale(1.05); opacity: 1; }
            70% { transform: scale(0.9); }
            100% { transform: scale(1); }
        }
        .animate-fun { animation: bounceIn 0.6s ease forwards; }

        #cuteAlert {
            position: fixed; top: -150px; left: 50%; transform: translateX(-50%);
            background: #ff6b95; color: white; padding: 1rem 2rem;
            border-radius: 5rem; font-weight: 800; border: 4px solid white;
            box-shadow: 0 10px 0 #e04a76; z-index: 5000; transition: all 0.5s;
            width: 80%; text-align: center; display: flex; align-items: center; justify-content: center;
        }
        .alert-active { top: 30px !important; }
        
        #video-element, #teacher-video-stream { transform: scaleX(-1); object-fit: cover; background: #000; }
        #quiz-overlay { z-index: 4000; }
        .live-frame-container { background: #1e1b4b; border-radius: 2.5rem; border: 8px solid #e0e7ff; overflow: hidden; box-shadow: 0 15px 0 #e0e7ff; }

        @media (max-width: 768px) {
            .bubble-card { border-radius: 2rem; border-width: 4px; box-shadow: 0 10px 0 #ffecf0; }
        }

        @media (min-width: 769px) {
            .desktop-container { display: flex !important; flex-direction: row !important; align-items: flex-start; }
            aside { width: 320px !important; position: sticky; top: 2.5rem; }
            main { flex: 1 !important; }
        }

        .score-pop { font-size: 3rem; font-weight: 900; color: #ff6b95; text-shadow: 4px 4px 0px #ffecf0; }
        .option-selected { background: #ff6b95 !important; color: white !important; border-color: #ff6b95 !important; }
    </style>
</head>
<body class="p-4 md:p-10">

    <div id="quiz-overlay" class="hidden fixed inset-0 bg-pink-500/20 backdrop-blur-md flex items-center justify-center p-4">
        <div class="bubble-card max-w-2xl w-full p-6 md:p-10 bg-white animate-fun relative max-h-[90vh] overflow-y-auto">
            <button onclick="closeQuiz()" class="absolute top-4 right-4 text-gray-400 hover:text-pink-500 font-bold text-xs uppercase tracking-tighter">Tutup [X]</button>
            <div id="quiz-content">
                <h2 id="quiz-title" class="text-xl md:text-2xl font-black text-pink-500 mb-6 uppercase">üéØ Kuis Kilat!</h2>
                <div id="quiz-body" class="space-y-6"></div>
                <div id="quiz-footer" class="hidden mt-8 pt-6 border-t-4 border-pink-50 text-center">
                    <button onclick="finishQuiz()" class="bg-pink-500 text-white px-10 py-4 rounded-3xl font-black shadow-[0_10px_0_#e04a76] hover:translate-y-1 hover:shadow-[0_5px_0_#e04a76] transition-all uppercase">Kirim ke Guru üöÄ</button>
                </div>
            </div>
            <div id="quiz-result" class="hidden text-center py-10">
                <div class="score-pop mb-2" id="final-score-val">0</div>
                <h3 class="text-2xl font-black text-slate-700 uppercase mb-4">Nilai Kamu!</h3>
                <div class="p-6 bg-pink-50 rounded-[2rem] border-4 border-pink-100 mb-6">
                    <p class="text-[10px] font-black text-pink-400 uppercase mb-2">Pesan AI Untukmu:</p>
                    <p id="ai-feedback" class="text-sm font-bold text-slate-600 italic">"Analisis sedang diproses..."</p>
                </div>
                <button onclick="closeQuiz()" class="text-pink-500 font-black uppercase text-sm underline">Kembali ke Kelas</button>
            </div>
        </div>
    </div>

    <div id="cuteAlert">
        <span id="cuteIcon" class="text-2xl md:text-3xl mr-3">üçì</span>
        <span id="cuteMsg" class="text-xs md:text-base">Halo! Semangat Belajar ya!</span>
    </div>

    <div class="max-w-6xl mx-auto flex flex-col desktop-container gap-8">
        
        <aside class="w-full space-y-6 order-2 md:order-1">
            <div id="score-card" class="bubble-card p-6 bg-gradient-to-br from-pink-500 to-rose-400 border-none shadow-[0_15px_0_#e04a76] text-white hidden">
                <div class="flex justify-between items-center mb-2">
                    <p class="text-[9px] font-black uppercase tracking-widest opacity-80">Rangkuman Nilai</p>
                    <span class="text-xl">üèÜ</span>
                </div>
                <div class="flex items-baseline gap-2">
                    <h2 id="sidebar-score" class="text-4xl font-black">0</h2>
                    <span class="text-xs font-bold opacity-80">Poin AI</span>
                </div>
            </div>

            <div class="bubble-card p-6 bg-white border-pink-100">
                <p class="text-[9px] font-black text-pink-400 uppercase tracking-widest mb-2 text-center">üè´ Ruang Kelas Kamu</p>
                <select id="select-kelas-murid" onchange="muridPindahKelas()" class="w-full p-3 rounded-2xl border-2 border-pink-50 bg-pink-50/50 text-xs font-bold text-pink-600 outline-none">
                    <option value="">-- Pilih Kelas --</option>
                </select>
            </div>

            <div class="bubble-card p-8 text-center bg-white relative">
                <div id="cam-container" class="w-20 h-20 md:w-24 md:h-24 bg-pink-100 rounded-full mx-auto mb-4 flex items-center justify-center text-4xl border-4 border-pink-200 overflow-hidden">
                    <span id="placeholder-avatar">üê∂</span>
                </div>
                <h2 class="text-xl font-black text-pink-500 uppercase"><%= nama_siswa %></h2>
                <p class="text-[10px] font-bold text-slate-400 mb-2 uppercase tracking-widest">SISWA AKTIF</p>
                <button id="btn-cam" onclick="startCamera()" class="mt-2 text-[10px] font-bold text-pink-400 border border-pink-200 px-3 py-1 rounded-full hover:bg-pink-50 transition-all uppercase">üì∏ Aktifkan Kamera</button>
            </div>
            
            <div class="bubble-card p-4 bg-indigo-50 border-indigo-100 shadow-[0_10px_0_#e0e7ff] text-center">
                <p class="text-[9px] font-black text-indigo-400 uppercase tracking-widest mb-1">Guru Kamu</p>
                <h4 id="nama-guru-display" class="font-bold text-indigo-700 uppercase text-xs md:text-sm">Menunggu Guru...</h4>
            </div>

            <div class="bubble-card p-6 bg-yellow-50 border-yellow-200 shadow-[0_10px_0_#fef3c7]">
                <h3 class="font-black text-yellow-700 text-sm mb-4 uppercase flex items-center gap-2"><span>üí¨</span> Chat Kelas</h3>
                <div id="chat-box" class="h-48 overflow-y-auto space-y-3 p-2 mb-4 text-[11px] font-semibold"></div>
                <div class="flex gap-2">
                    <input id="chat-input" type="text" placeholder="Tanya sesuatu..." class="w-full p-3 rounded-2xl border-2 border-yellow-100 text-xs outline-none">
                    <button onclick="sendChat()" class="bg-yellow-400 text-white p-3 rounded-2xl hover:scale-110 active:scale-90 transition-all">üöÄ</button>
                </div>
            </div>
        </aside>

        <main class="w-full order-1 md:order-2 space-y-8">
            <div id="live-stage-murid" class="live-frame-container hidden animate-fun">
                <div class="relative w-full aspect-video">
                    <img id="teacher-video-stream" class="w-full h-full object-cover" />
                    
                    <div id="teacher-presentation-overlay" class="hidden absolute inset-0 bg-white p-6 md:p-10 overflow-y-auto prose prose-pink max-w-none">
                        <h2 id="live-judul" class="text-pink-500 font-black"></h2>
                        <div id="live-konten" class="text-sm"></div>
                    </div>

                    <div class="absolute top-4 left-4 flex items-center gap-2">
                        <div class="bg-red-500 text-white text-[8px] font-bold px-2 py-1 rounded-full animate-pulse">GURU SEDANG LIVE</div>
                        <div id="status-mode" class="bg-black/40 text-white text-[8px] px-2 py-1 rounded-full">Mode: Kamera</div>
                    </div>
                </div>
            </div>

            <div id="no-materi" class="bubble-card flex flex-col items-center justify-center p-8 text-center bg-white min-h-[400px]">
                <div class="relative mb-8">
                    <div class="w-24 h-24 bg-sky-50 rounded-full animate-ping absolute opacity-20"></div>
                    <span class="text-6xl relative">‚òÅÔ∏è</span>
                </div>
                <h2 class="text-2xl font-black text-sky-400 uppercase">Belum Ada Materi</h2>
                <p id="status-materi-text" class="text-slate-400 mt-2 font-semibold text-xs">Pilih kelas atau tunggu guru memulai pelajaran.</p>
            </div>

            <div id="materi-display" class="hidden animate-fun">
                <div class="bubble-card p-8 md:p-12 bg-white border-sky-100 shadow-[0_20px_0_#e0f2fe] prose prose-pink max-w-none">
                    <div id="content-materi"></div>
                </div>
            </div>
        </main>

    </div>

    <canvas id="hidden-canvas" class="hidden" width="240" height="180"></canvas>

    <script>
        const socket = io();
        const namaSiswa = "<%= nama_siswa %>";
        const emailSiswa = "<%= email_siswa %>"; 
        const kodeSekolah = "<%= kode_sekolah %>";
        let kelasTersimpan = "<%= kelas_siswa %>"; 
        let currentRoom = kodeSekolah;
        let myStream = null;
        let currentQuizData = null; 

        // --- 1. LOGIKA VIDEO & STREAMING ---
        
        // ‚úÖ BENAR (Perbaikan)
socket.on('stream-frame', (data) => {
    const img = document.getElementById('teacher-video-stream');
    
    // Validasi tambahan agar hanya menampilkan stream dari Guru
    if(img && data.role === 'Guru') {
        img.src = data.image;
    }
});


        async function startCamera() {
            try {
                myStream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
                const video = document.createElement('video');
                video.id = 'video-element';
                video.srcObject = myStream;
                video.autoplay = true;
                video.muted = true;
                video.className = "w-full h-full object-cover";
                
                const container = document.getElementById('cam-container');
                container.innerHTML = '';
                container.appendChild(video);
                
                socket.emit('join-live', { room: currentRoom, nama: namaSiswa });
                sendFrameToGuru();

                document.getElementById('btn-cam').classList.add('hidden');
                showCuteAlert('Kamera kamu aktif!', 'üìπ');
            } catch (err) { 
                showCuteAlert('Gagal akses kamera!', '‚ùå'); 
            }
        }

        function sendFrameToGuru() {
            if(!myStream) return;
            const video = document.getElementById('video-element');
            const canvas = document.getElementById('hidden-canvas');
            const ctx = canvas.getContext('2d');

            if (video && video.readyState === video.HAVE_ENOUGH_DATA) {
                ctx.drawImage(video, 0, 0, canvas.width, canvas.height);
                const frame = canvas.toDataURL('image/jpeg', 0.5);
                socket.emit('stream-frame', { room: currentRoom, image: frame });
            }
            setTimeout(sendFrameToGuru, 200);
        }

        socket.on('change-view-mode', (data) => {
            const overlay = document.getElementById('teacher-presentation-overlay');
            const statusMode = document.getElementById('status-mode');
            if (data.mode === 'presentation') {
                overlay.classList.remove('hidden');
                statusMode.innerText = "Mode: Materi AI";
            } else {
                overlay.classList.add('hidden');
                statusMode.innerText = "Mode: Kamera";
            }
        });

        // --- 2. LOGIKA KELAS & ROOM ---

        async function initKelasMurid() {
            try {
                const res = await fetch(`/api/kelas/${kodeSekolah}`);
                const data = await res.json();
                const select = document.getElementById('select-kelas-murid');
                data.forEach(k => {
                    const isSelected = (k.nama_kelas === kelasTersimpan) ? 'selected' : '';
                    select.innerHTML += `<option value="${k.nama_kelas}" ${isSelected}>${k.nama_kelas}</option>`;
                });
                if(kelasTersimpan && kelasTersimpan !== "null") joinRoomSiswa(kelasTersimpan);
            } catch (e) { console.error("Gagal muat kelas"); }
        }

        async function muridPindahKelas() {
            const kelasBaru = document.getElementById('select-kelas-murid').value;
            if(!kelasBaru) return;
            await fetch('/api/update-kelas-siswa', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ email: emailSiswa, kelas: kelasBaru })
            });
            kelasTersimpan = kelasBaru;
            joinRoomSiswa(kelasBaru);
            showCuteAlert(`Pindah ke ${kelasBaru}!`, 'üåà');
        }

        function joinRoomSiswa(namaKelas) {
            const newRoom = `${kodeSekolah}-${namaKelas}`;
            socket.emit('join-room', { room: newRoom, nama: namaSiswa, role: 'Siswa' });
            currentRoom = newRoom;
            document.getElementById('status-materi-text').innerText = `Menunggu instruksi Guru di ${namaKelas}...`;
            document.getElementById('live-stage-murid').classList.remove('hidden');
        }

        window.onload = initKelasMurid;

        // --- 3. LOGIKA CHAT & NOTIF ---

        function showCuteAlert(msg, icon = 'üçì') {
            const alert = document.getElementById('cuteAlert');
            document.getElementById('cuteMsg').innerText = msg;
            document.getElementById('cuteIcon').innerText = icon;
            alert.classList.add('alert-active');
            setTimeout(() => alert.classList.remove('alert-active'), 3000);
        }

        function sendChat() {
            const input = document.getElementById('chat-input');
            if(input.value.trim()) {
                socket.emit('chat-message', { user: namaSiswa, msg: input.value, room: currentRoom, role: 'Siswa' });
                input.value = '';
            }
        }

        socket.on('chat-message', (data) => {
            const chatBox = document.getElementById('chat-box');
            if(data.role === 'Guru') document.getElementById('nama-guru-display').innerText = data.user;
            
            const side = data.user === namaSiswa ? 'text-right' : 'text-left';
            const color = data.user === namaSiswa ? 'bg-pink-100' : 'bg-white';
            const label = data.role === 'Guru' ? 'text-indigo-500 font-black' : 'text-gray-400';
            
            chatBox.innerHTML += `
                <div class="animate-fun ${side}">
                    <span class="text-[8px] ${label} uppercase block">${data.user}</span>
                    <div class="p-2 px-3 rounded-2xl ${color} border border-pink-50 inline-block max-w-[90%]">${data.msg}</div>
                </div>`;
            chatBox.scrollTop = chatBox.scrollHeight;
        });

        // --- 4. LOGIKA MATERI & KUIS AI ---

        socket.on('new-materi', (data) => {
            showCuteAlert('Materi baru dari Guru!', 'üìë');
            document.getElementById('no-materi').classList.add('hidden');
            document.getElementById('materi-display').classList.remove('hidden');
            document.getElementById('content-materi').innerHTML = `
                <h1 class="text-2xl md:text-3xl font-black text-pink-500 mb-6 uppercase tracking-tight">${data.judul}</h1>
                <div class="text-slate-600 leading-relaxed">${data.html}</div>`;
            document.getElementById('live-judul').innerText = data.judul;
            document.getElementById('live-konten').innerHTML = data.html;
        });

        socket.on('start-quiz', (data) => {
            currentQuizData = data; 
            showCuteAlert('KUIS DIMULAI!', 'üéØ');
            
            const body = document.getElementById('quiz-body');
            document.getElementById('quiz-overlay').classList.remove('hidden');
            document.getElementById('quiz-content').classList.remove('hidden');
            document.getElementById('quiz-result').classList.add('hidden');
            document.getElementById('quiz-footer').classList.remove('hidden');
            document.getElementById('quiz-title').innerText = "KUIS: " + data.judul;

            let html = "";

            if(data.soal_pg && data.soal_pg.length > 0) {
                html += `<p class="text-[10px] font-black text-sky-400 uppercase mb-4">Bagian 1: Pilihan Ganda</p>`;
                html += data.soal_pg.map((s, idx) => `
                    <div class="pg-item p-4 bg-sky-50 rounded-[2rem] border-2 border-sky-100 mb-4" data-index="${idx}">
                        <p class="font-bold text-slate-700 mb-3 text-sm">${idx + 1}. ${s.q}</p>
                        <div class="grid grid-cols-1 gap-2">
                            ${s.a.map(opsi => `
                                <button onclick="selectOption(this, ${idx})" 
                                    class="option-btn p-3 bg-white rounded-xl border-2 border-white hover:border-pink-200 transition-all text-xs font-bold text-slate-600 shadow-sm">
                                    ${opsi}
                                </button>`).join('')}
                        </div>
                    </div>`).join('');
            }

            if(data.soal_quiz && data.soal_quiz.length > 0) {
                html += `<p class="text-[10px] font-black text-amber-400 uppercase my-6">Bagian 2: Flash Quiz</p>`;
                html += data.soal_quiz.map((q, idx) => `
                    <div class="quiz-item p-4 bg-amber-50 rounded-[2rem] border-2 border-amber-100 mb-4">
                        <p class="font-bold text-slate-700 mb-3 text-sm">${idx + 1}. ${q.q}</p>
                        <input type="text" class="quiz-ans w-full p-3 rounded-xl border-2 border-white outline-none text-xs font-semibold" placeholder="Jawaban singkat...">
                    </div>`).join('');
            }

            if(data.soal_essay && data.soal_essay.length > 0) {
                html += `<p class="text-[10px] font-black text-pink-400 uppercase my-6">Bagian 3: Analisis Essay</p>`;
                html += data.soal_essay.map((e, idx) => `
                    <div class="essay-item p-4 bg-pink-50 rounded-[2rem] border-2 border-pink-100 mb-4">
                        <p class="font-bold text-slate-700 mb-3 text-sm">${idx + 1}. ${e.q}</p>
                        <textarea class="essay-ans w-full p-3 rounded-xl border-2 border-white outline-none text-xs font-semibold h-24" placeholder="Ketik jawabanmu..."></textarea>
                    </div>`).join('');
            }

            body.innerHTML = html;
        });

        function selectOption(btn, qIdx) {
            const container = btn.closest('.pg-item');
            container.querySelectorAll('.option-btn').forEach(b => b.classList.remove('option-selected'));
            btn.classList.add('option-selected');
        }

        function finishQuiz() {
            const pgAnswers = [];
            document.querySelectorAll('.pg-item').forEach(item => {
                const selected = item.querySelector('.option-selected');
                pgAnswers.push(selected ? selected.innerText.trim() : "");
            });

            const quizAnswers = [];
            document.querySelectorAll('.quiz-ans').forEach(input => {
                quizAnswers.push(input.value.trim());
            });

            const essayAnswers = [];
            document.querySelectorAll('.essay-ans').forEach(textarea => {
                essayAnswers.push(textarea.value.trim());
            });

            const studentAnswers = {
                pg: pgAnswers,
                quiz: quizAnswers,
                essay: essayAnswers
            };

            document.getElementById('quiz-content').classList.add('hidden');
            document.getElementById('quiz-result').classList.remove('hidden');
            document.getElementById('quiz-footer').classList.add('hidden');
            document.getElementById('final-score-val').innerText = "...";
            document.getElementById('ai-feedback').innerText = "AI sedang memeriksa jawabanmu...";

            // JANTUNG PERBAIKAN: Tidak lagi mengirim 'soalAsli' ke server
            socket.emit('submit-jawaban-siswa', {
                name: namaSiswa,
                email: emailSiswa,
                kelas: kelasTersimpan || 'Umum',
                room: currentRoom,
                materi_judul: currentQuizData ? currentQuizData.judul : "Kuis Live",
                jawabanMurid: studentAnswers
                // soalAsli sudah tidak perlu karena server menyimpannya di activeQuizzes[room]
            });

            showCuteAlert('Jawaban terkirim ke Guru!', 'üöÄ');
        }

        socket.on('score-updated-live', (data) => {
            if(data.nama_siswa === namaSiswa) {
                document.getElementById('final-score-val').innerText = data.skor;
                document.getElementById('ai-feedback').innerText = data.umpan_balik;
                document.getElementById('sidebar-score').innerText = data.skor;
                document.getElementById('score-card').classList.remove('hidden');
                showCuteAlert('Koreksi AI selesai!', 'üèÜ');
            }
        });

        function closeQuiz() { document.getElementById('quiz-overlay').classList.add('hidden'); }
        document.getElementById('chat-input').addEventListener('keypress', (e) => { if(e.key === 'Enter') sendChat(); });
    </script>
</body>
</html>
