<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Space - Fun Edition</title>
    <script src="https://cdn.tailwindcss.com?plugins=typography"></script>
    <script src="/socket.io/socket.io.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Quicksand', sans-serif; background: #fff5f7; color: #475569; }
        .bubble-card { background: white; border-radius: 3rem; border: 6px solid #ffecf0; box-shadow: 0 20px 0 #ffecf0; transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275); }
        .bubble-card:hover { transform: translateY(-5px); }
        
        @keyframes bounceIn {
            0% { transform: scale(0.3); opacity: 0; }
            50% { transform: scale(1.05); opacity: 1; }
            70% { transform: scale(0.9); }
            100% { transform: scale(1); }
        }
        .animate-fun { animation: bounceIn 0.6s ease forwards; }

        #cuteAlert {
            position: fixed; top: -100px; left: 50%; transform: translateX(-50%);
            background: #ff6b95; color: white; padding: 1.5rem 3rem;
            border-radius: 5rem; font-weight: 800; border: 4px solid white;
            box-shadow: 0 10px 0 #e04a76; z-index: 5000; transition: all 0.5s;
        }
        .alert-active { top: 30px !important; }
        
        /* Gaya video agar bulat sempurna sesuai tema */
        #video-element { transform: scaleX(-1); }

        /* KUIS OVERLAY */
        #quiz-overlay { z-index: 4000; }
    </style>
</head>
<body class="p-4 md:p-10">

    <div id="quiz-overlay" class="hidden fixed inset-0 bg-pink-500/20 backdrop-blur-md flex items-center justify-center p-4">
        <div class="bubble-card max-w-2xl w-full p-10 bg-white animate-fun relative max-h-[90vh] overflow-y-auto">
            <button onclick="closeQuiz()" class="absolute top-6 right-8 text-gray-400 hover:text-pink-500 font-bold">TUTUP [X]</button>
            <div id="quiz-content">
                <h2 id="quiz-title" class="text-2xl font-black text-pink-500 mb-6 uppercase">üéØ Kuis Kilat!</h2>
                <div id="quiz-body" class="space-y-6">
                    </div>
            </div>
        </div>
    </div>

    <div id="cuteAlert" class="flex items-center gap-4">
        <span id="cuteIcon" class="text-3xl">üçì</span>
        <span id="cuteMsg">Halo! Semangat Belajar ya!</span>
    </div>

    <div class="max-w-6xl mx-auto flex flex-col md:flex-row gap-8">
        <aside class="w-full md:w-80 space-y-6">
            <div class="bubble-card p-8 text-center bg-white relative">
                <div id="cam-container" class="w-24 h-24 bg-pink-100 rounded-full mx-auto mb-4 flex items-center justify-center text-5xl border-4 border-pink-200 overflow-hidden">
                    <span id="placeholder-avatar">üê∂</span>
                </div>
                <h2 class="text-2xl font-black text-pink-500 uppercase"><%= nama_siswa %></h2>
                <button onclick="startCamera()" class="mt-2 text-[10px] font-bold text-pink-400 border border-pink-200 px-3 py-1 rounded-full hover:bg-pink-50 transition-all">AKTIFKAN KAMERA</button>
            </div>
            
            <div class="bubble-card p-6 bg-yellow-50 border-yellow-200 shadow-[0_20px_0_#fef3c7]">
                <h3 class="font-black text-yellow-700 text-sm mb-4 uppercase flex items-center gap-2"><span>üí¨</span> Diskusi Kelas</h3>
                <div id="chat-box" class="h-64 overflow-y-auto space-y-3 p-2 mb-4 text-sm font-semibold">
                    </div>
                <div class="flex gap-2">
                    <input id="chat-input" type="text" placeholder="Ketik pesan..." class="w-full p-3 rounded-2xl border-2 border-yellow-100 outline-none focus:border-yellow-400 text-xs">
                    <button onclick="sendChat()" class="bg-yellow-400 text-white p-3 rounded-2xl hover:scale-110 active:scale-90 transition-all">üöÄ</button>
                </div>
            </div>
        </aside>

        <main class="flex-1">
            <div id="no-materi" class="bubble-card h-[600px] flex flex-col items-center justify-center p-12 text-center bg-white">
                <div class="relative mb-8">
                    <div class="w-32 h-32 bg-sky-50 rounded-full animate-ping absolute opacity-20"></div>
                    <span class="text-7xl relative">‚òÅÔ∏è</span>
                </div>
                <h2 class="text-3xl font-black text-sky-400 uppercase">Tunggu Sebentar...</h2>
                <p class="text-slate-400 mt-2 font-semibold">Guru kamu lagi bikin materi yang super seru!</p>
            </div>

            <div id="materi-display" class="hidden animate-fun">
                <div class="bubble-card p-10 md:p-16 bg-white border-sky-100 shadow-[0_20px_0_#e0f2fe] prose prose-pink max-w-none">
                    <div id="content-materi">
                        </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        const socket = io();
        const namaSiswa = "<%= nama_siswa %>";

        // --- 1. LOGIKA ALERT ---
        function showCuteAlert(msg, icon = 'üçì') {
            const alert = document.getElementById('cuteAlert');
            document.getElementById('cuteMsg').innerText = msg;
            document.getElementById('cuteIcon').innerText = icon;
            alert.classList.add('alert-active');
            setTimeout(() => alert.classList.remove('alert-active'), 3000);
        }

        // --- 2. LOGIKA LIVE CAM ---
        async function startCamera() {
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ video: true });
                const video = document.createElement('video');
                video.id = 'video-element';
                video.srcObject = stream;
                video.autoplay = true;
                video.className = "w-full h-full object-cover rounded-full";
                
                const container = document.getElementById('cam-container');
                container.innerHTML = '';
                container.appendChild(video);
                showCuteAlert('Kamera sudah menyala!', 'üì∏');
            } catch (err) {
                showCuteAlert('Ups! Izin kamera ditolak.', '‚ùå');
            }
        }

        // --- 3. LOGIKA LIVE CHAT ---
        function sendChat() {
            const input = document.getElementById('chat-input');
            if(input.value.trim()) {
                socket.emit('chat-message', { user: namaSiswa, msg: input.value });
                input.value = '';
            }
        }

        socket.on('chat-message', (data) => {
            const chatBox = document.getElementById('chat-box');
            const side = data.user === namaSiswa ? 'text-right' : 'text-left';
            const color = data.user === namaSiswa ? 'bg-pink-100' : 'bg-white';
            
            chatBox.innerHTML += `
                <div class="animate-fun ${side}">
                    <span class="text-[9px] text-gray-400 uppercase">${data.user}</span>
                    <div class="p-3 rounded-2xl ${color} border border-gray-100 shadow-sm inline-block max-w-[80%]">
                        ${data.msg}
                    </div>
                </div>`;
            chatBox.scrollTop = chatBox.scrollHeight;
        });

        document.getElementById('chat-input').addEventListener('keypress', (e) => {
            if(e.key === 'Enter') sendChat();
        });

        // --- 4. LOGIKA AI (Menerima Materi) ---
        socket.on('new-materi', (data) => {
            showCuteAlert('Materi baru sudah siap!', 'üéÅ');
            document.getElementById('no-materi').classList.add('hidden');
            document.getElementById('materi-display').classList.remove('hidden');
            document.getElementById('content-materi').innerHTML = `
                <h1 class="text-4xl font-black text-pink-500 mb-8">${data.judul}</h1>
                <div class="text-slate-600 leading-relaxed">${data.html}</div>
            `;
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        // --- 5. LOGIKA KUIS LIVE (BARU) ---
        socket.on('start-quiz', (data) => {
            showCuteAlert('GURU MEMULAI KUIS! AYO JAWAB!', 'üéØ');
            const overlay = document.getElementById('quiz-overlay');
            const body = document.getElementById('quiz-body');
            
            overlay.classList.remove('hidden');
            document.getElementById('quiz-title').innerText = "KUIS: " + data.judul;
            
            body.innerHTML = data.soal.map((s, idx) => `
                <div class="p-5 bg-sky-50 rounded-[2rem] border-4 border-sky-100">
                    <p class="font-bold text-slate-700 mb-4 text-lg">${idx + 1}. ${s.q}</p>
                    <div class="grid grid-cols-1 gap-3">
                        ${s.a.map(opsi => `
                            <button onclick="checkAnswer(this, '${opsi}', '${s.c}')" 
                                class="p-4 bg-white rounded-2xl border-4 border-white hover:border-pink-200 transition-all text-sm font-bold text-slate-600 shadow-sm">
                                ${opsi}
                            </button>
                        `).join('')}
                    </div>
                </div>
            `).join('');
        });

        function checkAnswer(btn, picked, correct) {
            // Hindari klik berkali-kali pada soal yang sama
            const parent = btn.parentElement;
            const buttons = parent.querySelectorAll('button');
            buttons.forEach(b => b.disabled = true);

            if(picked === correct) {
                btn.classList.add('bg-green-500', 'text-white', 'border-green-200');
                showCuteAlert('HEBAT! Jawaban Benar!', 'üåü');
            } else {
                btn.classList.add('bg-red-500', 'text-white', 'border-red-200');
                showCuteAlert('Oops! Kurang tepat, ayo belajar lagi!', 'üß∏');
            }
        }

        function closeQuiz() {
            document.getElementById('quiz-overlay').classList.add('hidden');
        }
    </script>
</body>
</html>
