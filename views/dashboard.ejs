<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Guru - Global School AI</title>
    <script src="https://cdn.tailwindcss.com?plugins=typography"></script>
    
    <style>
        /* Custom Font & Animations */
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700;900&display=swap');
        body { font-family: 'Inter', sans-serif; }

        /* Efek Kaca (Glassmorphism) */
        .glass {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
            border: 1px solid rgba(255, 255, 255, 0.08);
        }

        /* Animasi Loading pada Tombol */
        @keyframes pulse-ring {
            0% { box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.7); }
            70% { box-shadow: 0 0 0 15px rgba(59, 130, 246, 0); }
            100% { box-shadow: 0 0 0 0 rgba(59, 130, 246, 0); }
        }
        .btn-loading {
            animation: pulse-ring 2s infinite;
            cursor: not-allowed;
            opacity: 0.8;
        }

        /* Animasi Muncul */
        @keyframes slideIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-enter { animation: slideIn 0.6s ease-out forwards; }
    </style>
</head>

<body class="bg-[#020202] text-white min-h-screen p-3 md:p-8 bg-[url('https://source.unsplash.com/random/1920x1080/?technology,abstract')] bg-fixed bg-cover bg-blend-overlay bg-black/90 overflow-x-hidden">

    <nav class="glass flex flex-col md:flex-row justify-between items-center p-4 md:p-6 rounded-2xl md:rounded-3xl mb-6 md:mb-8 shadow-2xl relative overflow-hidden gap-4">
        <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500"></div>
        
        <div class="z-10 text-center md:text-left">
            <h1 class="text-lg md:text-2xl font-black text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400 uppercase tracking-tighter">
                üè´ <%= instansi %>
            </h1>
            <div class="flex items-center gap-2 justify-center md:justify-start mt-1">
                <span class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></span>
                <p class="text-[8px] md:text-[10px] text-gray-400 font-mono tracking-widest uppercase">ID SYSTEM: <%= kode %></p>
            </div>
        </div>

        <div class="flex flex-wrap justify-center gap-2 md:gap-3 z-10">
            <button class="bg-red-500/10 text-red-400 border border-red-500/50 px-4 md:px-6 py-2 rounded-full font-bold text-[10px] md:text-xs hover:bg-red-600 hover:text-white transition-all flex items-center gap-2">
                <span class="relative flex h-2 w-2">
                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
                    <span class="relative inline-flex rounded-full h-2 w-2 bg-red-500"></span>
                </span>
                LIVE CLASS
            </button>
            <button onclick="window.print()" class="glass hover:bg-white/10 px-4 md:px-6 py-2 rounded-full font-bold text-[10px] md:text-xs transition-all flex items-center gap-2">
                üñ®Ô∏è <span class="hidden md:inline">CETAK PDF</span><span class="md:hidden">PDF</span>
            </button>
            <a href="/" class="glass hover:bg-red-900/50 hover:border-red-500/50 text-gray-400 hover:text-red-300 px-4 py-2 rounded-full font-bold text-[10px] md:text-xs transition-all uppercase">
                KELUAR
            </a>
        </div>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 md:gap-8">
        
        <div class="lg:col-span-4 h-fit lg:sticky lg:top-8 order-1">
            <div class="glass p-6 md:p-8 rounded-[30px] md:rounded-[40px] shadow-2xl relative overflow-hidden group">
                <div class="absolute -right-10 -top-10 w-40 h-40 bg-blue-600/20 rounded-full blur-[50px] group-hover:bg-blue-600/30 transition-all"></div>
                
                <h2 class="text-lg md:text-xl font-black mb-4 md:mb-6 text-white flex items-center gap-2">
                    <span class="text-2xl md:text-3xl">üß†</span> 
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-indigo-400">GEMINI 2.5 ENGINE</span>
                </h2>
                
                <div class="space-y-4">
                    <div>
                        <label class="text-[10px] md:text-xs font-bold text-gray-500 ml-2 uppercase tracking-wider">Instruksi Materi</label>
                        <textarea id="prompt" class="w-full h-40 md:h-64 bg-black/40 border border-white/10 rounded-2xl md:rounded-3xl p-4 md:p-6 outline-none focus:border-blue-500 focus:bg-black/60 focus:ring-1 focus:ring-blue-500/50 text-base md:text-lg transition-all placeholder-gray-600 resize-none mt-2 font-medium" placeholder="Contoh: Buatkan materi lengkap tentang Teknik Pengelasan SMAW..."></textarea>
                    </div>

                    <button id="btnGen" onclick="generate()" class="w-full bg-gradient-to-r from-blue-600 to-indigo-700 py-4 md:py-5 rounded-xl md:rounded-2xl font-black text-base md:text-lg hover:scale-[1.02] hover:shadow-lg hover:shadow-blue-600/30 transition-all uppercase tracking-widest flex justify-center items-center gap-3">
                        <span>üöÄ</span> PRODUKSI MATERI
                    </button>
                </div>
            </div>
            
            <div class="glass mt-4 md:mt-6 p-4 md:p-6 rounded-2xl md:rounded-3xl border-l-4 border-emerald-500 opacity-70 hover:opacity-100 transition-opacity">
                <h3 class="font-bold text-emerald-400 text-xs md:text-sm mb-1 uppercase">üí° Tips Pro:</h3>
                <p class="text-[10px] md:text-xs text-gray-400 leading-relaxed">
                    Minta AI menyertakan <b>'Daftar Pustaka'</b> atau <b>'Istilah Penting'</b> untuk materi lebih profesional.
                </p>
            </div>
        </div>

        <div class="lg:col-span-8 order-2">
            <div id="preview" class="hidden space-y-6 animate-enter">
                
                <div class="bg-amber-500/10 border border-amber-500/20 p-4 rounded-xl md:rounded-2xl flex items-center gap-4">
                    <div class="bg-amber-500/20 p-2 rounded-full text-amber-500 text-xs">‚ö†Ô∏è</div>
                    <div>
                        <h4 class="text-amber-500 font-bold text-[10px] md:text-sm uppercase">AI Generated Content</h4>
                        <p class="text-[9px] md:text-[10px] text-amber-200/60 leading-tight">Mohon periksa validitas materi sebelum dibagikan ke siswa.</p>
                    </div>
                </div>

                <div id="result-container" class="glass p-6 md:p-12 rounded-[30px] md:rounded-[40px] shadow-2xl min-h-[400px] border-white/10 overflow-x-hidden">
                    <h1 id="res-judul" class="text-2xl md:text-5xl font-black mb-6 md:mb-8 text-transparent bg-clip-text bg-gradient-to-r from-blue-200 via-white to-blue-200 border-b border-white/10 pb-6 leading-tight"></h1>
                    
                    <div id="res-html" class="prose prose-sm md:prose-lg prose-invert max-w-none 
                        prose-headings:font-bold prose-headings:text-blue-300
                        prose-p:text-gray-300 prose-p:leading-relaxed
                        prose-strong:text-white prose-strong:font-black
                        prose-ul:list-disc prose-ul:ml-4 prose-li:text-gray-300">
                    </div>

                    <div id="res-soal-area" class="mt-8 md:mt-12 pt-8 border-t border-dashed border-white/20 hidden">
                        <h2 class="text-xl md:text-2xl font-black text-emerald-400 mb-6 flex items-center gap-2 uppercase">
                            üìù Latihan Mandiri
                        </h2>
                        <div id="res-soal-list" class="grid gap-4"></div>
                    </div>
                </div>

                <button onclick="location.reload()" class="w-full glass py-4 md:py-5 rounded-2xl md:rounded-3xl font-bold border-white/10 hover:bg-white/5 uppercase tracking-widest text-[10px] md:text-sm text-gray-400 hover:text-white transition-all">
                    üîÑ Buat Materi Baru
                </button>
            </div>

            <div id="empty-state" class="glass p-8 md:p-12 rounded-[30px] md:rounded-[40px] text-center flex flex-col items-center justify-center h-[300px] md:h-[500px] opacity-50">
                <div class="text-4xl md:text-6xl mb-4 grayscale">ü§ñ</div>
                <h3 class="text-base md:text-xl font-bold text-gray-300">Area Materi Kosong</h3>
                <p class="text-[10px] md:text-sm text-gray-500 mt-2">Input instruksi di panel atas/kiri untuk memulai.</p>
            </div>
        </div>
    </div>

    <script>
        // Logika Script tetap sama sesuai permintaan (tidak dirubah jalurnya)
        async function generate() {
            const btn = document.getElementById('btnGen');
            const promptInput = document.getElementById('prompt');
            const preview = document.getElementById('preview');
            const emptyState = document.getElementById('empty-state');
            
            if(!promptInput.value.trim()) {
                promptInput.focus();
                promptInput.classList.add('ring-2', 'ring-red-500');
                setTimeout(() => promptInput.classList.remove('ring-2', 'ring-red-500'), 2000);
                return;
            }
            
            btn.innerHTML = `<span class="animate-spin text-lg md:text-xl">‚öôÔ∏è</span> MERACIK...`;
            btn.classList.add('btn-loading');
            btn.disabled = true;
            
            try {
                const res = await fetch('/api/generate', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ instruksi: promptInput.value })
                });
                
                const data = await res.json();
                
                emptyState.classList.add('hidden');
                preview.classList.remove('hidden');
                
                document.getElementById('res-judul').innerText = data.judul;
                document.getElementById('res-html').innerHTML = data.html;

                const soalArea = document.getElementById('res-soal-area');
                const soalList = document.getElementById('res-soal-list');
                
                if (data.soal && data.soal.length > 0) {
                    soalArea.classList.remove('hidden');
                    soalList.innerHTML = data.soal.map((item, index) => `
                        <div class="bg-black/30 p-4 md:p-6 rounded-xl md:rounded-2xl border border-white/5 hover:border-emerald-500/30 transition-all">
                            <p class="font-bold text-white mb-3 text-base md:text-lg"><span class="text-emerald-500">#${index+1}.</span> ${item.q}</p>
                            <div class="space-y-2 ml-2">
                                ${item.a.map(opsi => `
                                    <div class="flex items-center gap-3 text-xs md:text-sm text-gray-300 p-2 rounded-lg hover:bg-white/5 cursor-pointer">
                                        <div class="w-4 h-4 rounded-full border border-gray-500"></div>
                                        ${opsi}
                                    </div>
                                `).join('')}
                            </div>
                        </div>
                    `).join('');
                } else {
                    soalArea.classList.add('hidden');
                }
                
                preview.scrollIntoView({ behavior: 'smooth', block: 'start' });

            } catch(e) { 
                alert('Gagal memproses AI! Cek koneksi internet.');
                console.error(e);
            }
            
            btn.innerHTML = `<span>üöÄ</span> PRODUKSI MATERI`;
            btn.classList.remove('btn-loading');
            btn.disabled = false;
        }
    </script>
</body>
</html>

