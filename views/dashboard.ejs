    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;600;800&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Plus Jakarta Sans', sans-serif; background: #f0f4f8; color: #1e293b; }
        .sidebar { background: #0f172a; min-width: 280px; height: 100vh; position: sticky; top: 0; }
        .card-elegant { background: white; border-radius: 2rem; border: 1px solid #e2e8f0; box-shadow: 0 15px 30px -5px rgba(0,0,0,0.05); }
        
        /* VIDEO STAGE */
        #main-stage { height: 650px; background: #000; border-radius: 2.5rem; overflow: hidden; position: relative; border: 4px solid #1e293b; }
        #teacher-cam, #guru-live-cam, #guru-pip-cam { transform: scaleX(-1); object-fit: cover; width: 100%; height: 100%; }
        
        /* LIVE INDICATOR */
        .live-dot { width: 10px; height: 10px; background: #ff0000; border-radius: 50%; box-shadow: 0 0 10px #ff0000; animation: blink 1s infinite; }
        @keyframes blink { 0% { opacity: 1; } 50% { opacity: 0.3; } 100% { opacity: 1; } }

        /* MODAL */
        .modal-overlay { background: rgba(15, 23, 42, 0.95); backdrop-filter: blur(10px); display: none; z-index: 1000; }
        .modal-active { display: flex !important; animation: slideIn 0.3s ease-out; }
        @keyframes slideIn { from { transform: translateY(20px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }

        /* GRID */
        .student-tile { background: #1e293b; aspect-ratio: 4/3; border-radius: 1rem; overflow: hidden; position: relative; border: 2px solid transparent; transition: 0.3s; cursor: pointer; }
        .student-tile:hover { border-color: #6366f1; transform: scale(1.05); z-index: 10; }

        /* CUSTOM SCROLL */
        ::-webkit-scrollbar { width: 5px; }
        ::-webkit-scrollbar-thumb { background: #6366f1; border-radius: 10px; }
    </style>
</head>
