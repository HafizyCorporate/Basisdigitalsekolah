                <div id="main-stage" onclick="resetFokusVideo()" class="shadow-inner group cursor-pointer">
                    <video id="guru-live-cam" autoplay playsinline muted></video>
                    <img id="fokus-murid-view" class="hidden w-full h-full object-contain">
                    
                    <div id="presentation-stage" class="hidden absolute inset-0 bg-white p-10 lg:p-16 overflow-y-auto prose max-w-none">
                        <h1 id="slide-judul" class="text-3xl lg:text-5xl font-black text-indigo-600 mb-8"></h1>
                        <div id="slide-konten" class="text-lg lg:text-xl text-slate-700 leading-relaxed"></div>
                    </div>

                    <div id="mini-guru-cam" class="hidden absolute bottom-5 right-5 lg:bottom-10 lg:right-10 w-40 lg:w-56 aspect-video bg-black rounded-3xl border-4 border-indigo-500 overflow-hidden shadow-2xl z-30">
                        <video id="guru-pip-cam" autoplay playsinline muted></video>
                    </div>
                </div>
                
                <div class="mt-8 mb-4">
                    <div class="p-6 bg-slate-800/50 border border-white/5 rounded-2xl backdrop-blur-sm">
                        <h3 class="font-bold text-white mb-4 flex items-center gap-2 text-sm uppercase tracking-widest">
                            <span>üìä</span> Status Pengerjaan Siswa
                        </h3>
                        <div id="status-kerjakan-siswa" class="grid grid-cols-2 md:grid-cols-4 gap-4">
                            <div class="text-[10px] text-slate-500 italic">Menunggu data live...</div>
                        </div>
                    </div>
                </div>
                <div class="mt-8">
                    <div class="flex justify-between items-center mb-6 px-4">
                        <h4 class="text-white font-black text-lg uppercase tracking-tight">Real-time Scoreboard</h4>
                        <div class="flex gap-2">
                            <button onclick="exportLaporan('word')" class="bg-blue-600 text-white px-4 py-2 rounded-xl text-[9px] font-black hover:bg-blue-500 transition-all">DOC NILAI</button>
                            <button onclick="exportLaporan('excel')" class="bg-emerald-500 text-white px-4 py-2 rounded-xl text-[9px] font-black hover:bg-emerald-400 transition-all">XLS NILAI</button>
                        </div>
                    </div>
                    <div class="overflow-hidden rounded-[2rem] border border-white/5 bg-white/5 overflow-x-auto">
                        <table class="w-full text-left text-[12px] text-slate-300 min-w-[600px]">
                            <thead class="bg-slate-950 text-slate-500 font-black uppercase text-[10px]">
                                <tr><th class="p-6">Rank</th><th class="p-6">Murid</th><th class="p-6">Skor</th><th class="p-6">AI Feedback</th><th class="p-6 text-right">Opsi</th></tr>
                            </thead>
                            <tbody id="live-score-body" class="divide-y divide-white/5">
                                <tr id="empty-score"><td colspan="5" class="p-16 text-center text-slate-500 italic">Menunggu partisipasi siswa...</td></tr>
                            </tbody>
