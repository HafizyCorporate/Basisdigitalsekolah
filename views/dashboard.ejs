<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Space - Pro Connection</title>
    <script src="https://cdn.tailwindcss.com?plugins=typography"></script>
    <script src="/socket.io/socket.io.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"></script>
    
    <style>
        body { font-family: 'Quicksand', sans-serif; background: #0f172a; color: #e2e8f0; height: 100vh; overflow: hidden; }
        
        /* Layout Grid */
        .main-grid { display: grid; grid-template-columns: 3fr 1fr; height: calc(100vh - 70px); gap: 1rem; padding: 1rem; }
        
        @media (max-width: 1024px) {
            .main-grid { grid-template-columns: 1fr; overflow-y: auto; }
            #sidebar-col { height: 500px; }
        }

        /* Video Stage */
        #main-stage { 
            position: relative; background: #000; border-radius: 1.5rem; 
            overflow: hidden; border: 1px solid #334155; box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.5);
            display: flex; flex-direction: column; justify-content: center;
        }
        
        /* Teacher Stream */
        #teacher-video-stream { width: 100%; height: 100%; object-fit: contain; background: #000; }
        
        /* Student PIP (Picture in Picture) */
        #student-pip-wrapper {
            position: absolute; bottom: 5rem; right: 1rem; width: 200px; aspect-ratio: 4/3;
            border-radius: 1rem; overflow: hidden; border: 3px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.8); z-index: 20; background: #1e293b;
            transition: all 0.3s ease;
        }
        #video-element { width: 100%; height: 100%; object-fit: cover; transform: scaleX(-1); }

        /* Control Bar - Fixed & Visible */
        .video-controls {
            position: absolute; bottom: 0; left: 0; right: 0;
            padding: 1.5rem; padding-bottom: 1rem;
            background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);
            display: flex; align-items: center; gap: 1.5rem; z-index: 30;
        }

        .ctrl-btn {
            width: 45px; height: 45px; border-radius: 50%;
            display: flex; align-items: center; justify-content: center;
            font-size: 1.2rem; transition: all 0.2s; cursor: pointer;
            background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(4px); border: 1px solid rgba(255,255,255,0.1);
        }
        .ctrl-btn:hover { background: rgba(255, 255, 255, 0.3); transform: scale(1.1); }
        .ctrl-btn.active-red { background: #ef4444; border-color: #ef4444; color: white; }
        .ctrl-btn.active-green { background: #10b981; border-color: #10b981; color: white; }

        /* Sidebar Styling */
        .glass-panel { background: #1e293b; border-radius: 1.5rem; border: 1px solid #334155; overflow: hidden; display: flex; flex-direction: column; }
        
        /* Notifikasi Alert */
        #cuteAlert {
            position: fixed; top: -100px; left: 50%; transform: translateX(-50%);
            background: #ec4899; color: white; padding: 0.75rem 2rem;
            border-radius: 50px; font-weight: 700; border: 2px solid #fce7f3;
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.5); z-index: 5000; transition: top 0.5s;
            display: flex; align-items: center; gap: 10px;
        }
        .alert-active { top: 30px !important; }

        /* Quiz Overlay */
        #quiz-overlay { z-index: 9999; }
        .option-selected { background: #ec4899 !important; color: white !important; border-color: #ec4899 !important; }

    </style>
</head>
<body>

    <nav class="h-[60px] flex justify-between items-center px-6 bg-slate-900 border-b border-slate-800">
        <div class="flex items-center gap-3">
            <div class="w-8 h-8 rounded-full bg-pink-500 flex items-center justify-center text-white font-bold text-sm">
                <i class="fa-solid fa-graduation-cap"></i>
            </div>
            <div>
                <h1 class="font-bold text-slate-100 text-sm md:text-base">Student Space</h1>
            </div>
        </div>
        
        <div class="flex items-center gap-3">
            <select id="select-kelas-murid" onchange="muridPindahKelas()" class="bg-slate-800 border border-slate-700 text-white text-xs rounded-full p-2 px-4 outline-none focus:border-pink-500">
                <option value="">-- Pilih Kelas --</option>
            </select>
            <div id="status-live-indicator" class="hidden px-3 py-1 bg-red-900/50 text-red-400 rounded-full text-[10px] font-bold border border-red-900 flex items-center gap-2">
                <span class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></span> LIVE
            </div>
        </div>
    </nav>

    <div id="cuteAlert">
        <span id="cuteIcon" class="text-xl">üçì</span>
        <span id="cuteMsg" class="text-sm">Halo!</span>
    </div>

    <div class="main-grid">

        <div id="main-stage">
            
            <img id="teacher-video-stream" src="" alt="Guru belum menyalakan kamera">
            
            <div id="video-placeholder" class="absolute inset-0 flex flex-col items-center justify-center text-slate-500 bg-slate-950 z-0">
                <i class="fa-solid fa-satellite-dish text-6xl mb-4 opacity-50"></i>
                <p class="font-bold text-lg">Menunggu Sinyal Guru...</p>
                <p class="text-xs mt-2 opacity-60">Pastikan kamu sudah memilih kelas yang benar.</p>
            </div>

            <div id="student-pip-wrapper">
                <div id="cam-container" class="w-full h-full bg-slate-800 flex items-center justify-center">
                    <span class="text-[10px] text-slate-400">Kamera Mati</span>
                </div>
            </div>

            <div class="video-controls text-white">
                
                <button id="btn-mic" onclick="toggleMic()" class="ctrl-btn bg-slate-700 hover:bg-slate-600" title="Matikan/Nyalakan Suara Saya">
                    <i id="icon-mic" class="fa-solid fa-microphone-slash"></i>
                </button>

                <button id="btn-cam" onclick="toggleCamera()" class="ctrl-btn bg-slate-700 hover:bg-slate-600" title="Matikan/Nyalakan Kamera Saya">
                    <i id="icon-cam" class="fa-solid fa-video-slash"></i>
                </button>

                <div class="h-8 w-[1px] bg-white/20 mx-2"></div>

                <div class="flex-1 text-xs font-semibold opacity-80">
                    <span id="my-status-text">Kamu Offline</span>
                </div>

                <button onclick="toggleFullscreen()" class="ctrl-btn" title="Layar Penuh">
                    <i id="icon-fullscreen" class="fa-solid fa-expand"></i>
                </button>
            </div>
        </div>

        <div id="sidebar-col" class="flex flex-col gap-4">
            
            <div id="quiz-alert-box" class="hidden bg-gradient-to-br from-pink-600 to-rose-600 rounded-2xl p-4 text-white shadow-lg animate-bounce cursor-pointer" onclick="openQuizModal()">
                <div class="flex justify-between items-center mb-2">
                    <span class="font-black text-sm uppercase tracking-wider">‚ö° Kuis Aktif!</span>
                    <i class="fa-solid fa-pen-to-square"></i>
                </div>
                <p class="text-xs mb-3 opacity-90">Guru baru saja membagikan soal. Kerjakan sekarang.</p>
                <button class="w-full bg-white text-pink-600 py-2 rounded-lg text-xs font-bold uppercase shadow">Buka Soal</button>
            </div>

            <div class="glass-panel flex-1">
                <div class="p-3 bg-slate-800 border-b border-slate-700 flex justify-between items-center">
                    <h3 class="font-bold text-slate-300 text-xs uppercase">
                        <i class="fa-regular fa-comments mr-2"></i> Chat Kelas
                    </h3>
                    <div class="text-[10px] text-green-400 flex items-center gap-1">
                        <div class="w-1.5 h-1.5 bg-green-500 rounded-full"></div> Online
                    </div>
                </div>
                
                <div id="chat-box" class="flex-1 overflow-y-auto p-3 space-y-3 bg-slate-900 text-xs text-slate-300">
                    </div>

                <div class="p-3 bg-slate-800 border-t border-slate-700">
                    <div class="flex gap-2">
                        <input id="chat-input" type="text" placeholder="Tanya Guru..." class="w-full bg-slate-900 border border-slate-700 text-white rounded-lg px-3 py-2 text-xs focus:ring-1 focus:ring-pink-500 outline-none">
                        <button onclick="sendChat()" class="bg-pink-600 text-white p-2 rounded-lg hover:bg-pink-500 transition-all">
                            <i class="fa-solid fa-paper-plane text-xs"></i>
                        </button>
                    </div>
                </div>
            </div>

            <div class="glass-panel p-3 flex flex-row items-center gap-3 bg-slate-800">
                <div class="w-8 h-8 rounded-full bg-slate-700 flex items-center justify-center border border-slate-600">
                    <i class="fa-solid fa-user text-slate-400 text-xs"></i>
                </div>
                <div class="flex-1">
                    <h2 class="font-bold text-xs text-slate-200 truncate"><%= nama_siswa %></h2>
                    <p class="text-[10px] text-slate-500">Skor: <span id="sidebar-score" class="text-pink-400 font-bold">0</span></p>
                </div>
            </div>

        </div>
    </div>

    <div id="quiz-overlay" class="hidden fixed inset-0 bg-black/90 backdrop-blur-sm flex items-center justify-center p-4">
        <div class="bg-white w-full max-w-4xl h-[85vh] rounded-2xl flex flex-col overflow-hidden">
            <div class="bg-pink-600 p-4 flex justify-between items-center text-white">
                <h2 id="quiz-title" class="text-lg font-bold">Lembar Jawaban</h2>
                <button onclick="closeQuiz()" class="hover:text-pink-200"><i class="fa-solid fa-xmark text-xl"></i></button>
            </div>
            <div id="quiz-content" class="flex-1 overflow-y-auto p-6 bg-slate-50">
                <div id="quiz-body" class="space-y-6"></div>
            </div>
            <div id="quiz-result" class="hidden flex-1 flex flex-col items-center justify-center p-10 text-center">
                <div class="text-6xl mb-4">üèÜ</div>
                <h3 class="text-2xl font-bold text-slate-800">Nilai Kamu</h3>
                <div class="text-5xl font-black text-pink-600 my-4" id="final-score-val">0</div>
                <p id="ai-feedback" class="text-sm text-slate-500 max-w-md bg-slate-100 p-4 rounded-xl">Analisis...</p>
                <button onclick="closeQuiz()" class="mt-6 text-pink-600 font-bold text-sm underline">Tutup</button>
            </div>
            <div id="quiz-footer" class="p-4 border-t bg-slate-100 flex justify-end">
                <button onclick="finishQuiz()" class="bg-pink-600 text-white px-6 py-3 rounded-lg font-bold shadow hover:bg-pink-500">Kirim Jawaban üöÄ</button>
            </div>
        </div>
    </div>

    <canvas id="hidden-canvas" class="hidden" width="240" height="180"></canvas>

    <script>
        const socket = io();
        const namaSiswa = "<%= nama_siswa %>";
        const emailSiswa = "<%= email_siswa %>"; 
        const kodeSekolah = "<%= kode_sekolah %>";
        let kelasTersimpan = "<%= kelas_siswa %>"; 
        let currentRoom = kodeSekolah;
        let myStream = null;
        let currentQuizData = null; 
        
        // Status Lirik
        let isCameraOn = false;
        let isMicOn = false;

        // --- 1. LOGIKA UTAMA (KONEKSI) ---

        async function initKelasMurid() {
            try {
                const res = await fetch(`/api/kelas/${kodeSekolah}`);
                const data = await res.json();
                const select = document.getElementById('select-kelas-murid');
                select.innerHTML = '<option value="">-- Pilih Kelas --</option>';
                data.forEach(k => {
                    const isSelected = (k.nama_kelas === kelasTersimpan) ? 'selected' : '';
                    select.innerHTML += `<option value="${k.nama_kelas}" ${isSelected}>${k.nama_kelas}</option>`;
                });
                if(kelasTersimpan && kelasTersimpan !== "null" && kelasTersimpan !== "") {
                    joinRoomSiswa(kelasTersimpan);
                }
            } catch (e) { console.error("Gagal muat kelas", e); }
        }

        async function muridPindahKelas() {
            const kelasBaru = document.getElementById('select-kelas-murid').value;
            if(!kelasBaru) return;
            await fetch('/api/update-kelas-siswa', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ email: emailSiswa, kelas: kelasBaru })
            });
            kelasTersimpan = kelasBaru;
            joinRoomSiswa(kelasBaru);
            showCuteAlert(`Pindah ke ${kelasBaru}`, 'üöÄ');
        }

        function joinRoomSiswa(namaKelas) {
            const newRoom = `${kodeSekolah}-${namaKelas}`;
            // Leave room lama jika perlu (opsional di socket.io biasanya otomatis handle via id, tapi kita update var)
            currentRoom = newRoom;
            
            socket.emit('join-room', { room: newRoom, nama: namaSiswa, role: 'Siswa' });
            
            // Jika kamera sudah nyala, restart stream ke room baru
            if(isCameraOn) {
                socket.emit('join-live', { room: currentRoom, nama: namaSiswa });
            }
        }

        window.onload = initKelasMurid;

        // --- 2. LOGIKA KAMERA & MIC (SELF CONTROL) ---

        async function startCamera() {
            try {
                // Minta akses kamera & audio
                myStream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
                const video = document.createElement('video');
                video.id = 'video-element';
                video.srcObject = myStream;
                video.autoplay = true;
                video.muted = true; // Supaya tidak dengar suara sendiri di headphone
                
                // Pasang di PIP
                const container = document.getElementById('cam-container');
                container.innerHTML = '';
                container.appendChild(video);
                
                // Aktifkan Socket & Loop Stream
                isCameraOn = true;
                isMicOn = true; // Default ON
                socket.emit('join-live', { room: currentRoom, nama: namaSiswa });
                sendFrameToGuru();

                updateControlUI();
                showCuteAlert('Kamera aktif! Guru bisa melihatmu.', 'üìπ');
            } catch (err) { 
                showCuteAlert('Akses kamera ditolak!', '‚ùå'); 
                console.error(err);
            }
        }

        // --- UPDATE LOGIKA: MUTE SUARA SENDIRI ---
        function toggleMic() {
            if (!myStream) {
                showCuteAlert('Nyalakan kamera dulu!', '‚ö†Ô∏è');
                return;
            }
            
            const audioTrack = myStream.getAudioTracks()[0];
            if (audioTrack) {
                audioTrack.enabled = !audioTrack.enabled;
                isMicOn = audioTrack.enabled;
                
                updateControlUI();
                showCuteAlert(isMicOn ? 'Suara Aktif' : 'Suara Mati (Muted)', isMicOn ? 'üé§' : 'üîá');
            }
        }

        // --- UPDATE LOGIKA: PAUSE VIDEO SENDIRI (LAYAR HITAM) ---
        function toggleCamera() {
            if (!myStream) {
                startCamera(); // Jika belum mulai, mulai dulu
                return;
            }

            const videoTrack = myStream.getVideoTracks()[0];
            if (videoTrack) {
                videoTrack.enabled = !videoTrack.enabled;
                isCameraOn = videoTrack.enabled;
                
                // Update UI PIP
                const pip = document.getElementById('cam-container');
                if(!isCameraOn) {
                    pip.innerHTML = `<div class="w-full h-full bg-black flex items-center justify-center text-xs text-slate-500 font-bold uppercase tracking-wider">Kamera Off</div>`;
                } else {
                    const video = document.createElement('video');
                    video.id = 'video-element';
                    video.srcObject = myStream;
                    video.autoplay = true;
                    video.muted = true;
                    pip.innerHTML = '';
                    pip.appendChild(video);
                }

                updateControlUI();
                showCuteAlert(isCameraOn ? 'Kamera Nyala' : 'Kamera Mati', isCameraOn ? 'üìπ' : 'üö´');
            }
        }

        function updateControlUI() {
            const btnMic = document.getElementById('btn-mic');
            const iconMic = document.getElementById('icon-mic');
            const btnCam = document.getElementById('btn-cam');
            const iconCam = document.getElementById('icon-cam');
            const statusText = document.getElementById('my-status-text');

            if (isMicOn) {
                btnMic.classList.add('bg-green-600', 'hover:bg-green-500');
                btnMic.classList.remove('bg-red-600', 'bg-slate-700');
                iconMic.className = "fa-solid fa-microphone";
            } else {
                btnMic.classList.add('bg-red-600', 'hover:bg-red-500');
                btnMic.classList.remove('bg-green-600', 'bg-slate-700');
                iconMic.className = "fa-solid fa-microphone-slash";
            }

            if (isCameraOn) {
                btnCam.classList.add('bg-green-600', 'hover:bg-green-500');
                btnCam.classList.remove('bg-red-600', 'bg-slate-700');
                iconCam.className = "fa-solid fa-video";
                statusText.innerText = "Kamera: ON | Mic: " + (isMicOn ? "ON" : "OFF");
            } else {
                btnCam.classList.add('bg-red-600', 'hover:bg-red-500');
                btnCam.classList.remove('bg-green-600', 'bg-slate-700');
                iconCam.className = "fa-solid fa-video-slash";
                statusText.innerText = "Kamera: PAUSED";
            }
        }

        function sendFrameToGuru() {
            if(!isCameraOn || !myStream) {
                // Jika dimatikan, kirim frame hitam sekali-sekali agar guru tau user masih connect tapi off cam
                // Atau cukup stop sending
                setTimeout(sendFrameToGuru, 500); 
                return;
            }

            const video = document.getElementById('video-element');
            const canvas = document.getElementById('hidden-canvas');
            const ctx = canvas.getContext('2d');

            if (video && video.readyState === video.HAVE_ENOUGH_DATA) {
                ctx.drawImage(video, 0, 0, canvas.width, canvas.height);
                const frame = canvas.toDataURL('image/jpeg', 0.5);
                socket.emit('stream-frame', { room: currentRoom, image: frame });
            }
            setTimeout(sendFrameToGuru, 200); 
        }

        // --- 3. LOGIKA TERIMA GAMBAR GURU ---

        socket.on('stream-frame', (data) => {
            const img = document.getElementById('teacher-video-stream');
            const placeholder = document.getElementById('video-placeholder');
            
            if(img && data.role === 'Guru') {
                img.src = data.image;
                img.classList.remove('opacity-0');
                placeholder.classList.add('hidden');
                document.getElementById('status-live-indicator').classList.remove('hidden');
            }
        });

        // --- 4. LOGIKA LAYAR PENUH ---

        function toggleFullscreen() {
            const stage = document.getElementById('main-stage');
            if (!document.fullscreenElement) {
                stage.requestFullscreen().catch(err => {
                    alert(`Error trying to enable fullscreen: ${err.message} (${err.name})`);
                });
            } else {
                document.exitFullscreen();
            }
        }


        // --- 5. LOGIKA CHAT (NYAMBUNG KE GURU) ---

        function showCuteAlert(msg, icon = 'üçì') {
            const alert = document.getElementById('cuteAlert');
            document.getElementById('cuteMsg').innerText = msg;
            document.getElementById('cuteIcon').innerText = icon;
            alert.classList.add('alert-active');
            setTimeout(() => alert.classList.remove('alert-active'), 3000);
        }

        function sendChat() {
            const input = document.getElementById('chat-input');
            if(input.value.trim()) {
                // Emit ke ROOM yang sama dengan guru
                socket.emit('chat-message', { user: namaSiswa, msg: input.value, room: currentRoom, role: 'Siswa' });
                input.value = '';
            }
        }

        socket.on('chat-message', (data) => {
            const chatBox = document.getElementById('chat-box');
            
            const isMe = data.user === namaSiswa;
            const align = isMe ? 'justify-end' : 'justify-start';
            const bg = isMe ? 'bg-pink-600 text-white' : 'bg-slate-700 text-slate-200 border border-slate-600';
            const userLabel = isMe ? '' : `<span class="text-[10px] font-bold text-slate-400 block mb-1">${data.user}</span>`;
            
            chatBox.innerHTML += `
                <div class="flex ${align} mb-2">
                    <div class="max-w-[85%]">
                        ${userLabel}
                        <div class="px-3 py-2 rounded-xl text-xs leading-relaxed ${bg} shadow-sm">
                            ${data.msg}
                        </div>
                    </div>
                </div>`;
            chatBox.scrollTop = chatBox.scrollHeight;
        });

        // --- 6. LOGIKA KUIS (POPUP 1/4 LAYAR -> MODAL) ---

        function openQuizModal() {
             document.getElementById('quiz-overlay').classList.remove('hidden');
             document.getElementById('quiz-alert-box').classList.add('hidden'); // Sembunyikan notif setelah dibuka
        }

        socket.on('start-quiz', (data) => {
            currentQuizData = data; 
            showCuteAlert('SOAL BARU MASUK!', 'üìù');
            
            // Tampilkan Notifikasi Besar di Sidebar
            document.getElementById('quiz-alert-box').classList.remove('hidden');
            
            const body = document.getElementById('quiz-body');
            document.getElementById('quiz-content').classList.remove('hidden');
            document.getElementById('quiz-result').classList.add('hidden');
            document.getElementById('quiz-footer').classList.remove('hidden');
            document.getElementById('quiz-title').innerText = "Topik: " + data.judul;

            let html = "";
            // Render Soal (Sama seperti sebelumnya)
            if(data.soal_pg && data.soal_pg.length > 0) {
                html += `<div class="mb-6"><h4 class="font-bold text-pink-500 border-b border-pink-100 pb-2 mb-4">A. Pilihan Ganda</h4>`;
                html += data.soal_pg.map((s, idx) => `
                    <div class="pg-item mb-6" data-index="${idx}">
                        <p class="font-semibold text-slate-700 mb-3 text-sm">${idx + 1}. ${s.q}</p>
                        <div class="space-y-2">
                            ${s.a.map(opsi => `<button onclick="selectOption(this)" class="option-btn w-full text-left p-3 bg-white rounded-xl border border-slate-200 hover:bg-pink-50 transition-all text-xs font-medium text-slate-600">${opsi}</button>`).join('')}
                        </div>
                    </div>`).join('');
                html += `</div>`;
            }
            if(data.soal_essay && data.soal_essay.length > 0) {
                html += `<div class="mb-6"><h4 class="font-bold text-purple-500 border-b border-purple-100 pb-2 mb-4">B. Essay</h4>`;
                html += data.soal_essay.map((e, idx) => `<div class="essay-item mb-4"><p class="font-semibold text-slate-700 mb-2 text-sm">${idx + 1}. ${e.q}</p><textarea class="essay-ans w-full p-3 rounded-xl border border-slate-200 text-xs h-24"></textarea></div>`).join('');
                html += `</div>`;
            }
            body.innerHTML = html;
        });

        function selectOption(btn) {
            btn.closest('.pg-item').querySelectorAll('.option-btn').forEach(b => b.classList.remove('option-selected'));
            btn.classList.add('option-selected');
        }

        function finishQuiz() {
            // Logika Submit Jawaban (Sama)
            const pgAnswers = [];
            document.querySelectorAll('.pg-item').forEach(item => {
                const selected = item.querySelector('.option-selected');
                pgAnswers.push(selected ? selected.innerText.trim() : "");
            });
            const essayAnswers = [];
            document.querySelectorAll('.essay-ans').forEach(ta => essayAnswers.push(ta.value.trim()));

            document.getElementById('quiz-content').classList.add('hidden');
            document.getElementById('quiz-result').classList.remove('hidden');
            document.getElementById('quiz-footer').classList.add('hidden');
            document.getElementById('final-score-val').innerText = "...";
            document.getElementById('ai-feedback').innerText = "AI sedang memeriksa jawabanmu...";

            socket.emit('submit-jawaban-siswa', {
                name: namaSiswa, email: emailSiswa, kelas: kelasTersimpan || 'Umum', room: currentRoom,
                materi_judul: currentQuizData ? currentQuizData.judul : "Kuis Live",
                jawabanMurid: { pg: pgAnswers, essay: essayAnswers }
            });
        }

        socket.on('score-updated-live', (data) => {
            if(data.nama_siswa === namaSiswa) {
                document.getElementById('final-score-val').innerText = data.skor;
                document.getElementById('ai-feedback').innerText = data.umpan_balik;
                document.getElementById('sidebar-score').innerText = data.skor;
                showCuteAlert('Nilai kamu sudah keluar!', 'üèÜ');
            }
        });

        function closeQuiz() { document.getElementById('quiz-overlay').classList.add('hidden'); }
        document.getElementById('chat-input').addEventListener('keypress', (e) => { if(e.key === 'Enter') sendChat(); });

    </script>
