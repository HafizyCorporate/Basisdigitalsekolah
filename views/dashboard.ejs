    <script>
        const socket = io();
        const namaGuru = "<%= nama_guru %>";
        const kodeSekolah = "<%= kode %>";
        const instansi = "<%= instansi %>";
        let currentRoom = kodeSekolah;
        let lastGeneratedData = null;
        let allScores = [];
        let isPresentationMode = false;
        let targetMuridKoreksi = "";

        // 1. KAMERA & STREAMING
        async function initCameras() {
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
                document.getElementById('teacher-cam').srcObject = stream;
                document.getElementById('guru-live-cam').srcObject = stream;
                document.getElementById('guru-pip-cam').srcObject = stream;
                
                const canvas = document.createElement('canvas'); 
                const ctx = canvas.getContext('2d');
                canvas.width = 480; canvas.height = 360;
                
                setInterval(() => {
                    ctx.drawImage(document.getElementById('guru-live-cam'), 0, 0, canvas.width, canvas.height);
                    socket.emit('update-frame', { room: currentRoom, image: canvas.toDataURL('image/jpeg', 0.5) });
                }, 150);
            } catch (e) { showAlert("Kamera tidak terdeteksi", "‚ùå"); }
        }

        // 2. KELAS MANAGEMENT
        async function loadKelas() {
            const res = await fetch(`/api/kelas/${kodeSekolah}`);
            const data = await res.json();
            const sel = document.getElementById('select-kelas');
            sel.innerHTML = '<option value="">UMUM / SEMUA</option>';
            data.forEach(k => sel.innerHTML += `<option value="${k.nama_kelas}">${k.nama_kelas}</option>`);
        }

        function pindahKelas() {
            const k = document.getElementById('select-kelas').value;
            const newRoom = k ? `${kodeSekolah}-${k}` : kodeSekolah;
            socket.emit('switch-room', { oldRoom: currentRoom, newRoom: newRoom });
            currentRoom = newRoom;
            document.getElementById('current-room-label').innerText = k || "Umum";
            allScores = []; renderScoreboard(); muatRiwayat();
            showAlert(`Pindah ke Ruang ${k || 'Umum'}`, "üì°");
        }

        async function tambahKelas() {
            const n = prompt("Masukkan Nama Kelas Baru:"); 
            if(!n) return;
            await fetch('/api/kelas', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ kode_sekolah: kodeSekolah, nama_kelas: n }) });
            loadKelas();
        }

        // 3. DATABASE & KOREKSI
        function bukaKoreksi(nama, skor, feedback) {
            targetMuridKoreksi = nama;
            document.getElementById('koreksi-nama').innerText = "Koreksi Nilai: " + nama;
            document.getElementById('input-skor-baru').value = skor;
            document.getElementById('input-catatan-baru').value = feedback || "";
            document.getElementById('modal-koreksi').classList.add('modal-active');
        }

        function tutupKoreksi() { document.getElementById('modal-koreksi').classList.remove('modal-active'); }

        async function simpanKoreksi() {
            const s = document.getElementById('input-skor-baru').value;
            const f = document.getElementById('input-catatan-baru').value;
            
            await fetch('/api/update-nilai-manual', {
                method: 'POST', headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ 
                    kode_sekolah: kodeSekolah, 
                    nama_siswa: targetMuridKoreksi, 
                    skor: s, 
                    feedback: f, 
                    materi: lastGeneratedData?.judul || "Kuis Live" 
                })
            });

            socket.emit('manual-score-update', { room: currentRoom, name: targetMuridKoreksi, score: s, feedback: f });
            const idx = allScores.findIndex(x => x.name === targetMuridKoreksi);
            if(idx > -1) { allScores[idx].score = s; allScores[idx].feedback = f; }
            
            renderScoreboard(); muatRiwayat(); tutupKoreksi(); 
            showAlert("Nilai diperbarui!", "‚úÖ");
        }

        async function muatRiwayat() {
            const body = document.getElementById('history-body');
            const btn = document.querySelector('button[onclick="muatRiwayat()"]');
            btn.innerText = "SINKRONISASI...";
            
            try {
                const res = await fetch(`/api/riwayat-nilai/${kodeSekolah}`);
                const data = await res.json();
                body.innerHTML = ""; let total = 0; let lulus = 0;
                
                const currentKelas = document.getElementById('select-kelas').value;
                const filteredData = currentKelas ? data.filter(d => d.nama_kelas === currentKelas) : data;

                if(filteredData.length === 0) {
                    body.innerHTML = '<tr><td colspan="5" class="p-20 text-center italic opacity-40">Tidak ada riwayat untuk kelas ini</td></tr>';
                } else {
                    filteredData.forEach(d => {
                        total += parseInt(d.skor); if(d.skor >= 75) lulus++;
                        body.innerHTML += `
                            <tr class="hover:bg-indigo-50/50 transition-all border-b border-slate-50">
                                <td class="p-8 font-black text-slate-700">${d.nama_siswa}</td>
                                <td class="p-8 font-medium">${d.materi}</td>
                                <td class="p-8"><span class="bg-indigo-100 text-indigo-700 px-3 py-1 rounded-lg font-black">${d.skor}</span></td>
                                <td class="p-8 text-[11px] italic text-slate-400">${d.feedback || '-'}</td>
                                <td class="p-8 text-right font-bold text-slate-300">${new Date(d.tanggal).toLocaleDateString()}</td>
                            </tr>`;
                    });
                }
                document.getElementById('avg-score').innerText = filteredData.length ? Math.round(total/filteredData.length) : "0";
                document.getElementById('pass-count').innerText = lulus;
                document.getElementById('quiz-count').innerText = new Set(filteredData.map(f => f.materi)).size;
            } catch (e) { showAlert("DB Sync Error", "‚ö†Ô∏è"); }
            btn.innerText = "SINKRONISASI ULANG";
        }

        // 4. SOCKET & UI EVENTS
        socket.on('update-attendance', (listSiswa) => {
            const listUI = document.getElementById('list-absen');
            document.getElementById('count-absen').innerText = listSiswa.length;
            listUI.innerHTML = "";
            if(listSiswa.length === 0) listUI.innerHTML = '<li class="text-center opacity-30 mt-4">Belum ada siswa online</li>';
            listSiswa.forEach(s => {
                listUI.innerHTML += `
                    <li class="flex items-center gap-3 bg-white/5 p-3 rounded-xl border border-white/5">
                        <div class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></div>
                        <span class="text-[11px]">${s.name}</span>
                    </li>`;
            });
        });

        socket.on('join-live', (data) => {
            const grid = document.getElementById('students-live-grid');
            const safeId = data.name.replace(/\s+/g, '-');
            if (!document.getElementById(`tile-${safeId}`)) {
                const t = document.createElement('div');
                t.id = `tile-${safeId}`;
                t.className = "student-tile shadow-xl";
                t.onclick = () => fokusKeMurid(data.image || '', data.name);
                t.innerHTML = `<img id="img-tile-${safeId}" class="w-full h-full object-cover">
                               <div class="absolute bottom-1 left-1 bg-black/70 text-[7px] text-white px-2 py-0.5 rounded">${data.name}</div>`;
                grid.appendChild(t);
            }
        });

        socket.on('receive-frame', (data) => {
            const img = document.getElementById(`img-tile-${data.name.replace(/\s+/g, '-')}`);
            if (img) img.src = data.image;
        });

        socket.on('update-score-guru', (data) => {
            const ex = allScores.findIndex(s => s.name === data.name);
            if(ex > -1) allScores[ex] = data; else allScores.push(data);
            renderScoreboard();
        });

        function renderScoreboard() {
            const b = document.getElementById('live-score-body');
            document.getElementById('empty-score')?.remove();
            allScores.sort((a,b) => b.score - a.score); 
            b.innerHTML = '';
            allScores.forEach((s, i) => {
                b.innerHTML += `
                    <tr class="border-t border-white/5 hover:bg-white/5 transition-all">
                        <td class="p-6 font-black text-indigo-400">#${i+1}</td>
                        <td class="p-6 font-bold text-white">${s.name}</td>
                        <td class="p-6"><span class="bg-indigo-500/30 text-indigo-300 px-3 py-1 rounded-lg font-black">${s.score}</span></td>
                        <td class="p-6 italic text-slate-500 text-[10px]">${s.feedback || 'Sedang menilai...'}</td>
                        <td class="p-6 text-right"><button onclick="bukaKoreksi('${s.name}', ${s.score}, '${s.feedback}')" class="text-amber-500 font-black text-[10px] uppercase hover:underline">Koreksi</button></td>
                    </tr>`;
            });
        }

        // 5. EXPORT SYSTEM
        function exportLaporan(tipe) {
            const table = document.getElementById('history-body');
            const rows = Array.from(table.querySelectorAll('tr'));
            if(rows.length < 1 || rows[0].innerText.includes("Belum ada")) return showAlert("Data kosong!", "‚ö†Ô∏è");

            const data = rows.map(r => {
                const c = r.querySelectorAll('td');
                return { Murid: c[0].innerText, Materi: c[1].innerText, Skor: c[2].innerText, Catatan: c[3].innerText, Tgl: c[4].innerText };
            });

            if(tipe === 'excel') {
                const ws = XLSX.utils.json_to_sheet(data);
                const wb = XLSX.utils.book_new();
                XLSX.utils.book_append_sheet(wb, ws, "Laporan");
                XLSX.writeFile(wb, `Laporan_${currentRoom}.xlsx`);
            } else if(tipe === 'pdf') {
                const { jsPDF } = window.jspdf;
                const doc = new jsPDF();
                doc.text(`LAPORAN KELAS: ${currentRoom}`, 14, 15);
                doc.autoTable({
                    startY: 20,
                    head: [['Murid', 'Materi', 'Skor', 'Catatan', 'Tanggal']],
                    body: data.map(d => [d.Murid, d.Materi, d.Skor, d.Catatan, d.Tgl]),
                });
                doc.save(`Laporan_${currentRoom}.pdf`);
            } else {
                showAlert("Gunakan PDF/Excel dulu ya, Pak!", "‚ÑπÔ∏è");
            }
        }

        // 6. AI COMMANDS
        async function generate() {
            const btn = document.getElementById('btnGen');
            btn.innerText = "SEDANG BERPIKIR..."; btn.disabled = true;
            try {
                const res = await fetch('/api/generate', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ instruksi: document.getElementById('prompt').value }) });
                lastGeneratedData = await res.json();
                document.getElementById('empty-state').classList.add('hidden');
                document.getElementById('preview-area').classList.remove('hidden');
                document.getElementById('res-judul').innerText = lastGeneratedData.judul;
                document.getElementById('res-html').innerHTML = lastGeneratedData.html;
            } catch (e) { showAlert("AI Error", "‚ùå"); }
            btn.innerText = "PRODUKSI SEKARANG"; btn.disabled = false;
        }

        function publishToStudents() { 
            if(!lastGeneratedData) return;
            socket.emit('new-materi', { ...lastGeneratedData, room: currentRoom }); 
            showAlert("Materi disiarkan!", "üöÄ"); 
        }

        function publishQuiz() { 
            if(!lastGeneratedData) return;
            allScores = []; renderScoreboard(); 
            socket.emit('start-quiz', { ...lastGeneratedData, room: currentRoom }); 
            showAlert("Kuis dimulai!", "üéØ"); 
        }

        // 7. UTILS
        function showAlert(msg, icon = 'üí°') {
            const a = document.getElementById('customAlert');
            document.getElementById('alertMsg').innerText = msg;
            document.getElementById('alertIcon').innerText = icon;
            a.style.transform = "translateX(0)";
            setTimeout(() => a.style.transform = "translateX(150%)", 3000);
        }

        function toggleChat() { document.getElementById('chat-panel').classList.toggle('hidden'); }

        function sendChat() {
            const inp = document.getElementById('chat-input');
            if(!inp.value) return;
            const d = { room: currentRoom, sender: namaGuru, msg: inp.value };
            socket.emit('send-chat', d);
            appendChat(d);
            inp.value = '';
        }

        function appendChat(d) {
            const b = document.getElementById('chat-box');
            const isMe = d.sender === namaGuru;
            b.innerHTML += `<div class="flex ${isMe ? 'justify-end' : 'justify-start'}">
                <div class="${isMe ? 'bg-indigo-600 text-white' : 'bg-white border'} p-4 rounded-2xl max-w-[85%] shadow-sm">
                    <p class="text-[8px] opacity-60 font-black mb-1 uppercase">${d.sender}</p>
                    <p class="font-bold leading-relaxed">${d.msg}</p>
                </div>
            </div>`;
            b.scrollTop = b.scrollHeight;
        }

        function switchDisplayMode() {
            if(!lastGeneratedData) return showAlert("Buat materi dulu!", "‚ö†Ô∏è");
            isPresentationMode = !isPresentationMode;
            const stage = document.getElementById('presentation-stage');
            const mainV = document.getElementById('guru-live-cam');
            const pip = document.getElementById('mini-guru-cam');
            
            if(isPresentationMode) {
                stage.classList.remove('hidden');
                mainV.classList.add('opacity-0');
                pip.classList.remove('hidden');
                document.getElementById('slide-judul').innerText = lastGeneratedData.judul;
                document.getElementById('slide-konten').innerHTML = lastGeneratedData.html;
            } else {
                stage.classList.add('hidden');
                mainV.classList.remove('opacity-0');
                pip.classList.add('hidden');
            }
        }

        function muteAllStudents() { socket.emit('mute-all', { room: currentRoom }); showAlert("Muted All Students", "üîá"); }
        function toggleFullScreen() { if (!document.fullscreenElement) document.documentElement.requestFullscreen(); else document.exitFullscreen(); }

        function fokusKeMurid(img, nama) {
            const mv = document.getElementById('fokus-murid-view');
            const gv = document.getElementById('guru-live-cam');
            document.getElementById('presentation-stage').classList.add('hidden');
            gv.classList.add('hidden');
            mv.src = img;
            mv.classList.remove('hidden');
            showAlert(`Fokus ke: ${nama}`, "üë§");
        }

        function resetFokusVideo() {
            document.getElementById('fokus-murid-view').classList.add('hidden');
            document.getElementById('guru-live-cam').classList.remove('hidden');
            if(isPresentationMode) document.getElementById('presentation-stage').classList.remove('hidden');
        }

        window.onload = () => {
            initCameras();
            loadKelas();
            socket.emit('join-room', kodeSekolah);
            muatRiwayat();
        };
    </script>
