    <div id="customAlert" class="fixed top-10 right-10 z-[2000] transform translate-x-[150%] transition-transform duration-500 bg-slate-900 text-white p-5 rounded-2xl border-l-8 border-indigo-500 shadow-2xl flex items-center gap-4">
        <div class="text-2xl" id="alertIcon">üí°</div>
        <div class="font-bold" id="alertMsg"></div>
    </div>

    <script>
        const socket = io();
        const namaGuru = "<%= nama_guru %>";
        const kodeSekolah = "<%= kode %>";
        const instansi = "<%= instansi %>";
        let currentRoom = kodeSekolah;
        let lastGeneratedData = null;
        let allScores = [];
        let isPresentationMode = false;
        let targetMuridKoreksi = "";

        // -----------------------------------------------------------
        // 1. UPDATE LISTENER SOCKET (LIVE SCORE UPDATE)
        // -----------------------------------------------------------
        socket.on('score-updated-live', (data) => {
            // A. Update array internal agar sorting tetap jalan jika dirender ulang
            const ex = allScores.findIndex(s => s.name === data.nama_siswa);
            if(ex > -1) {
                allScores[ex].score = data.skor;
                allScores[ex].feedback = data.umpan_balik;
            } else {
                allScores.push({ name: data.nama_siswa, score: data.skor, feedback: data.umpan_balik });
            }

            // B. Tampilkan notifikasi kecil
            showAlert(`Jawaban baru: ${data.nama_siswa} (${data.skor})`, "üìù");

            // C. Update tabel nilai secara real-time di layar guru (Visual append)
            // Note: Saya ganti ID nya ke 'live-score-body' sesuai HTML di atas
            const tabelNilai = document.getElementById('live-score-body');
            document.getElementById('empty-score')?.remove();

            if (tabelNilai) {
                // Style disesuaikan agar text terlihat di background gelap (text-slate-300)
                const row = `
                    <tr class="border-t border-white/5 bg-white/5 transition-all animate-pulse">
                        <td class="p-6 text-xs font-bold text-indigo-400">Baru</td>
                        <td class="p-6 text-xs text-white font-bold">${data.nama_siswa}</td>
                        <td class="p-6">
                            <span class="bg-green-500/20 text-green-400 px-3 py-1 rounded-full text-[10px] font-black">
                                ${data.skor}
                            </span>
                        </td>
                        <td class="p-6 text-[10px] italic text-slate-400">${data.umpan_balik}</td>
                        <td class="p-6 text-[10px] text-slate-500 text-right">${data.waktu || 'Baru saja'}</td>
                    </tr>
                `;
                // Menambahkan di paling atas (afterbegin)
                tabelNilai.insertAdjacentHTML('afterbegin', row);
                
                // Update Monitoring Bubbles juga jika perlu
                const monitorGrid = document.getElementById('status-kerjakan-siswa');
                if(monitorGrid) {
                   const bubble = `
                   <div class="bg-slate-700/50 p-3 rounded-xl border border-white/5 flex items-center justify-between">
                        <span class="text-[9px] font-bold text-slate-300">${data.nama_siswa}</span>
                        <span class="text-[9px] font-black text-emerald-400">${data.skor}</span>
                   </div>`;
                   // Hapus text "Menunggu data" jika ada
                   if(monitorGrid.innerText.includes('Menunggu')) monitorGrid.innerHTML = '';
                   monitorGrid.insertAdjacentHTML('afterbegin', bubble);
                }
            }
        });

        // -----------------------------------------------------------
        // 2. FUNGSI MULAI KUIS AI (Versi Aman & Sinkron Gemini)
        // -----------------------------------------------------------
        function mulaiKuisAI() {
            if (!lastGeneratedData) return showAlert("Buat materi dulu!", "‚ö†Ô∏è");

            // 1. Kirim "Master Key" ke server agar server bisa menilai nanti
            socket.emit('server-store-quiz', { 
                room: currentRoom, 
                fullData: lastGeneratedData 
            });

            // 2. Filter data (Hapus kunci jawaban) sebelum dikirim ke browser Siswa
            const dataKeSiswa = {
                judul: lastGeneratedData.judul,
                // Hanya kirim Pertanyaan & Opsi (Kunci 'c' dibuang)
                soal_pg: (lastGeneratedData.soal_pg || []).map(s => ({ q: s.q, a: s.a })),
                // Hanya kirim Pertanyaan (Kriteria 'k' dibuang)
                soal_essay: (lastGeneratedData.soal_essay || []).map(e => ({ q: e.q })),
                // Hanya kirim Pertanyaan (Jawaban singkat dibuang)
                soal_quiz: (lastGeneratedData.soal_quiz || []).map(q => ({ q: q.q })),
                room: currentRoom
            };

            // 3. Reset tampilan Scoreboard di layar Guru
            allScores = []; 
            document.getElementById('live-score-body').innerHTML = '<tr id="empty-score"><td colspan="5" class="p-16 text-center text-slate-500 italic">Kuis dimulai! Menunggu jawaban...</td></tr>';
            document.getElementById('status-kerjakan-siswa').innerHTML = '<div class="col-span-full text-center text-[10px] text-slate-500 italic">Memonitoring jawaban masuk...</div>';

            // 4. Sebar soal "bersih" ke seluruh siswa via socket
            socket.emit('start-quiz', dataKeSiswa);
            showAlert("Kuis dikirim ke semua siswa!", "üöÄ");
        }


        // --- FUNGSI LAMA (DIPERTAHANKAN) ---

        async function initCameras() {
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
                document.getElementById('guru-live-cam').srcObject = stream;
                document.getElementById('guru-pip-cam').srcObject = stream;
                
                const canvas = document.createElement('canvas'); 
                const ctx = canvas.getContext('2d');
                canvas.width = 480; canvas.height = 360;
                
                setInterval(() => {
                    ctx.drawImage(document.getElementById('guru-live-cam'), 0, 0, canvas.width, canvas.height);
                    socket.emit('update-frame', { room: currentRoom, image: canvas.toDataURL('image/jpeg', 0.5) });
                }, 150);
            } catch (e) { showAlert("Kamera Error", "‚ùå"); }
        }

        function exportAbsensi(tipe) {
            const listItems = document.querySelectorAll('#list-absen li span');
            let data = [];
            listItems.forEach(item => {
                data.push({ "Nama Siswa": item.innerText, "Status": "Hadir", "Waktu": new Date().toLocaleTimeString() });
            });

            if (data.length === 0) return showAlert("Tidak ada siswa online", "‚ö†Ô∏è");

            const fileName = `Absensi_${currentRoom}_${new Date().toLocaleDateString()}`;

            if (tipe === 'excel') {
                const ws = XLSX.utils.json_to_sheet(data);
                const wb = XLSX.utils.book_new();
                XLSX.utils.book_append_sheet(wb, ws, "Daftar Hadir");
                XLSX.writeFile(wb, `${fileName}.xlsx`);
            } else if (tipe === 'pdf') {
                const { jsPDF } = window.jspdf;
                const doc = new jsPDF();
                doc.text(`DAFTAR HADIR - ${currentRoom}`, 14, 20);
                doc.autoTable({ startY: 30, head: [['Nama Siswa', 'Status', 'Waktu']], body: data.map(d => [d["Nama Siswa"], d.Status, d.Waktu]) });
                doc.save(`${fileName}.pdf`);
            } else if (tipe === 'word') {
                const content = `<h3>Daftar Hadir ${currentRoom}</h3><table border="1">` + data.map(d => `<tr><td>${d["Nama Siswa"]}</td><td>${d.Status}</td></tr>`).join('') + `</table>`;
                const blob = new Blob(['\ufeff', content], { type: 'application/msword' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a'); a.href = url; a.download = `${fileName}.doc`; a.click();
            }
            showAlert("Export Berhasil", "‚úÖ");
        }

        function exportLaporan(tipe) {
            const rows = Array.from(document.querySelectorAll('#live-score-body tr'));
            if (rows.length === 0 || rows[0].id === 'empty-score') return showAlert("Data nilai kosong", "‚ö†Ô∏è");

            const data = rows.map(r => {
                const c = r.querySelectorAll('td');
                // Check if row has data (not empty placeholder)
                if(c.length < 3) return null;
                return { Murid: c[1].innerText, Skor: c[2].innerText, Feedback: c[3].innerText };
            }).filter(d => d !== null);

            const fileName = `Nilai_${currentRoom}_${new Date().toLocaleDateString()}`;

            if (tipe === 'excel') {
                const ws = XLSX.utils.json_to_sheet(data);
                const wb = XLSX.utils.book_new();
                XLSX.utils.book_append_sheet(wb, ws, "Hasil Nilai");
                XLSX.writeFile(wb, `${fileName}.xlsx`);
            } else if (tipe === 'word') {
                const content = `<h3>Laporan Nilai - ${currentRoom}</h3><table border="1"><tr><th>Nama</th><th>Nilai</th></tr>` + data.map(d => `<tr><td>${d.Murid}</td><td>${d.Skor}</td></tr>`).join('') + `</table>`;
                const blob = new Blob(['\ufeff', content], { type: 'application/msword' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a'); a.href = url; a.download = `${fileName}.doc`; a.click();
            }
            showAlert("Export Berhasil", "‚úÖ");
        }

        function toggleCleanFullScreen() {
            const stage = document.getElementById('main-stage');
            if (!document.fullscreenElement) {
                stage.requestFullscreen().catch(err => {
                    alert(`Error attempting to enable full-screen mode: ${err.message}`);
                });
            } else {
                document.exitFullscreen();
            }
        }

        async function loadKelas() {
            const res = await fetch(`/api/kelas/${kodeSekolah}`);
            const data = await res.json();
            const sel = document.getElementById('select-kelas');
            sel.innerHTML = '<option value="">UMUM / SEMUA</option>';
            data.forEach(k => sel.innerHTML += `<option value="${k.nama_kelas}">${k.nama_kelas}</option>`);
        }

        function pindahKelas() {
            const k = document.getElementById('select-kelas').value;
            const newRoom = k ? `${kodeSekolah}-${k}` : kodeSekolah;
            socket.emit('switch-room', { oldRoom: currentRoom, newRoom: newRoom });
            currentRoom = newRoom;
            document.getElementById('current-room-label').innerText = k || "Umum";
            allScores = []; renderScoreboard(); 
            showAlert(`Pindah ke ${k || 'Umum'}`, "üì°");
        }

        async function tambahKelas() {
            const n = prompt("Nama Kelas Baru:"); 
            if(!n) return;
            await fetch('/api/kelas', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ kode_sekolah: kodeSekolah, nama_kelas: n }) });
            loadKelas();
        }

        socket.on('update-attendance', (listSiswa) => {
            const listUI = document.getElementById('list-absen');
            document.getElementById('count-absen').innerText = listSiswa.length;
            listUI.innerHTML = listSiswa.length === 0 ? '<li class="text-center opacity-30 mt-4">Belum ada siswa</li>' : "";
            listSiswa.forEach(s => {
                listUI.innerHTML += `<li class="flex items-center gap-3 bg-white/5 p-3 rounded-xl border border-white/5">
                    <div class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></div>
                    <span class="text-[11px]">${s.name}</span>
                </li>`;
            });
        });

        socket.on('join-live', (data) => {
            const grid = document.getElementById('students-live-grid');
            const safeId = data.name.replace(/\s+/g, '-');
            if (!document.getElementById(`tile-${safeId}`)) {
                const t = document.createElement('div');
                t.id = `tile-${safeId}`; t.className = "student-tile shadow-xl";
                t.onclick = () => fokusKeMurid(data.image || '', data.name);
                t.innerHTML = `<img id="img-tile-${safeId}" class="w-full h-full object-cover">
                               <div class="absolute bottom-1 left-1 bg-black/70 text-[7px] text-white px-2 py-0.5 rounded">${data.name}</div>`;
                grid.appendChild(t);
            }
        });

        socket.on('receive-frame', (data) => {
            const img = document.getElementById(`img-tile-${data.name.replace(/\s+/g, '-')}`);
            if (img) img.src = data.image;
        });

        socket.on('update-score-guru', (data) => {
            const ex = allScores.findIndex(s => s.name === data.name);
            if(ex > -1) allScores[ex] = data; else allScores.push(data);
            renderScoreboard();
        });

        function renderScoreboard() {
            const b = document.getElementById('live-score-body');
            document.getElementById('empty-score')?.remove();
            allScores.sort((a,b) => b.score - a.score); 
            b.innerHTML = '';
            allScores.forEach((s, i) => {
                b.innerHTML += `<tr class="border-t border-white/5 hover:bg-white/5 transition-all">
                    <td class="p-6 font-black text-indigo-400">#${i+1}</td>
                    <td class="p-6 font-bold text-white">${s.name}</td>
                    <td class="p-6"><span class="bg-indigo-500/30 text-indigo-300 px-3 py-1 rounded-lg font-black">${s.score}</span></td>
                    <td class="p-6 italic text-slate-500 text-[10px]">${s.feedback || '...'}</td>
                    <td class="p-6 text-right"><button onclick="bukaKoreksi('${s.name}', ${s.score}, '${s.feedback}')" class="text-amber-500 font-black text-[10px] uppercase hover:underline">Koreksi</button></td>
                </tr>`;
            });
        }

        async function generate() {
            const btn = document.getElementById('btnGen');
            btn.innerText = "PROSES..."; btn.disabled = true;
            try {
                const res = await fetch('/api/generate', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ instruksi: document.getElementById('prompt').value }) });
                lastGeneratedData = await res.json();
                document.getElementById('empty-state').classList.add('hidden');
                document.getElementById('preview-area').classList.remove('hidden');
                document.getElementById('res-judul').innerText = lastGeneratedData.judul;
                document.getElementById('res-html').innerHTML = lastGeneratedData.html;
            } catch (e) { showAlert("Gagal Generate", "‚ùå"); }
            btn.innerText = "BUAT SEKARANG"; btn.disabled = false;
        }

        function publishToStudents() { socket.emit('new-materi', { ...lastGeneratedData, room: currentRoom }); showAlert("Tersiar!", "üöÄ"); }
        
        // Hapus function publishQuiz lama agar tidak bentrok, diganti mulaiKuisAI()

        function switchDisplayMode() {
            if(!lastGeneratedData) return showAlert("Buat materi dulu!", "‚ö†Ô∏è");
            isPresentationMode = !isPresentationMode;
            const stage = document.getElementById('presentation-stage');
            const mainV = document.getElementById('guru-live-cam');
            const pip = document.getElementById('mini-guru-cam');
            if(isPresentationMode) {
                stage.classList.remove('hidden'); mainV.classList.add('opacity-0'); pip.classList.remove('hidden');
                document.getElementById('slide-judul').innerText = lastGeneratedData.judul;
                document.getElementById('slide-konten').innerHTML = lastGeneratedData.html;
            } else {
                stage.classList.add('hidden'); mainV.classList.remove('opacity-0'); pip.classList.add('hidden');
            }
        }

        function resetFokusVideo() {
            document.getElementById('fokus-murid-view').classList.add('hidden');
            document.getElementById('guru-live-cam').classList.remove('hidden');
            if(isPresentationMode) document.getElementById('presentation-stage').classList.remove('hidden');
        }

        function fokusKeMurid(img, nama) {
            const mv = document.getElementById('fokus-murid-view');
            const gv = document.getElementById('guru-live-cam');
            document.getElementById('presentation-stage').classList.add('hidden');
            gv.classList.add('hidden'); mv.src = img; mv.classList.remove('hidden');
            showAlert(`Fokus: ${nama}`, "üë§");
        }

        function showAlert(msg, icon = 'üí°') {
            const a = document.getElementById('customAlert');
            document.getElementById('alertMsg').innerText = msg;
            document.getElementById('alertIcon').innerText = icon;
            a.style.transform = "translateX(0)";
            setTimeout(() => a.style.transform = "translateX(150%)", 3000);
        }

        function muteAllStudents() { socket.emit('mute-all', { room: currentRoom }); showAlert("Semua Muted", "üîá"); }
        function bukaKoreksi(n, s, f) { targetMuridKoreksi = n; document.getElementById('koreksi-nama').innerText = n; document.getElementById('input-skor-baru').value = s; document.getElementById('input-catatan-baru').value = f; document.getElementById('modal-koreksi').classList.add('modal-active'); }
        function tutupKoreksi() { document.getElementById('modal-koreksi').classList.remove('modal-active'); }
        // Simpan koreksi logic (Opsional jika ada backend)
        function simpanKoreksi() {
             // Logic simpan ke backend bisa ditambahkan disini
             tutupKoreksi();
             showAlert("Nilai dikoreksi", "‚úèÔ∏è");
        }

        window.onload = () => { initCameras(); loadKelas(); socket.emit('join-room', kodeSekolah); };
    </script>
