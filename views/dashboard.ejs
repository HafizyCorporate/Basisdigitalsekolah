    <div id="modal-koreksi" class="fixed inset-0 modal-overlay items-center justify-center p-5">
        <div class="bg-white w-full max-w-lg rounded-[3rem] p-10 shadow-2xl">
            <h3 class="text-3xl font-black text-slate-800 mb-2">Koreksi Guru</h3>
            <p id="koreksi-nama" class="text-indigo-600 font-bold mb-8 uppercase tracking-widest text-sm"></p>
            <div class="space-y-6">
                <div>
                    <label class="text-[10px] font-black uppercase text-slate-400">Skor Baru</label>
                    <input type="number" id="input-skor-baru" class="w-full bg-slate-50 border-2 border-slate-100 p-5 rounded-2xl text-2xl font-black focus:border-indigo-500 outline-none">
                </div>
                <div>
                    <label class="text-[10px] font-black uppercase text-slate-400">Feedback</label>
                    <textarea id="input-catatan-baru" class="w-full bg-slate-50 border-2 border-slate-100 p-5 rounded-2xl h-32 focus:border-indigo-500 outline-none resize-none"></textarea>
