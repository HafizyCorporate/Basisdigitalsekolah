                <div class="lg:col-span-8">
                    <div id="preview-area" class="hidden">
                        <div class="flex justify-between items-center mb-6 bg-white p-5 rounded-3xl border border-slate-100">
                            <span class="text-[10px] font-black text-indigo-500 uppercase px-4">Preview Konten</span>
                            <div class="flex gap-2">
                                <button onclick="publishToStudents()" class="bg-indigo-600 text-white px-8 py-3 rounded-full text-[10px] font-black hover:bg-indigo-700 shadow-lg">SIARKAN</button>
                                <button onclick="mulaiKuisAI()" class="bg-amber-500 text-white px-8 py-3 rounded-full text-[10px] font-black hover:bg-amber-600 shadow-lg">MULAI KUIS</button>
                            </div>
                        </div>
                        <div class="card-elegant p-12 border-t-[10px] border-indigo-600">
                            <h1 id="res-judul" class="text-4xl font-black text-slate-800 mb-8"></h1>
                            <div id="res-html" class="prose prose-indigo max-w-none"></div>
