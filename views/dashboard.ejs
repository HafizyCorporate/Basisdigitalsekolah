            showAlert("Kelas Tersimpan! Murid bisa memilih sekarang.", "‚úÖ");
            muatDaftarKelas(); // Refresh list
            
            // Otomatis join room kelas tersebut
            const targetRoom = `<%= kode %>-${namaKelas}`;
            socket.emit('join-room', { roomID: targetRoom, userName: namaGuru, role: 'Guru' });
